<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.TsjyfwOrderDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.TsjyfwOrderEntity" id="tsjyfwOrderMap">
        <result property="id" column="id"/>
        <result property="uid" column="uid"/>
        <result property="roomid" column="roomid"/>
        <result property="bookid" column="bookid"/>
        <result property="status" column="status"/>
        <result property="createtime" column="createtime"/>
        <result property="invitegetbooktime" column="invitegetbooktime"/>
        <result property="uname" column="uname"/>
        <result property="umobile" column="umobile"/>
        <result property="ordercode" column="ordercode"/>
        <result property="isdel" column="isdel"/>
        <result property="changes" column="changes"/>
        <result property="cancelreason" column="cancelreason"/>
        <result property="copyid" column="copyid"/>
        <result property="searchid" column="searchid"/>
    </resultMap>

    <select id="queryObject" resultType="com.lcworld.entity.TsjyfwOrderEntity">
        select * from t_tsjyfw_order where id = #{value}
    </select>

    <select id="queryList" resultType="com.lcworld.entity.TsjyfwOrderEntity">
        select * from t_tsjyfw_order
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>
    
    <select id="queryTotal" resultType="int">
        select count(*) from t_tsjyfw_order 
    </select>
     
    <insert id="save" parameterType="com.lcworld.entity.TsjyfwOrderEntity" useGeneratedKeys="true" keyProperty="id">
        insert into t_tsjyfw_order
        (
            `uid`, 
            `roomid`, 
            `bookid`, 
            `status`, 
            `createtime`, 
            `invitegetbooktime`, 
            `uname`, 
            `umobile`, 
            `ordercode`, 
            `isdel`, 
            `changes`,
            `cancelreason`,
            `copyid`,
            `searchid`
        )
        values
        (
            #{uid}, 
            #{roomid}, 
            #{bookid}, 
            #{status}, 
            #{createtime}, 
            #{invitegetbooktime}, 
            #{uname}, 
            #{umobile}, 
            #{ordercode}, 
            #{isdel}, 
            #{changes},
            #{cancelreason},
            #{copyid},
            #{searchid}
        )
    </insert>
     
    <update id="update" parameterType="com.lcworld.entity.TsjyfwOrderEntity">
        update t_tsjyfw_order 
        <set>
            <if test="uid != null">`uid` = #{uid}, </if>
            <if test="roomid != null">`roomid` = #{roomid}, </if>
            <if test="bookid != null">`bookid` = #{bookid}, </if>
            <if test="status != null">`status` = #{status}, </if>
            <if test="createtime != null">`createtime` = #{createtime}, </if>
            <if test="invitegetbooktime != null">`invitegetbooktime` = #{invitegetbooktime}, </if>
            <if test="uname != null">`uname` = #{uname}, </if>
            <if test="umobile != null">`umobile` = #{umobile}, </if>
            <if test="ordercode != null">`ordercode` = #{ordercode}, </if>
            <if test="isdel != null">`isdel` = #{isdel}, </if>
            <if test="changes != null">`changes` = #{changes},</if>
            <if test="cancelreason != null">`cancelreason` = #{cancelreason},</if>
            <if test="copyid != null">`copyid` = #{copyid},</if>
            <if test="searchid != null">`searchid` = #{searchid}</if>
        </set>
        where id = #{id}
    </update>
    
    <delete id="delete">
        delete from t_tsjyfw_order where id = #{value}
    </delete>
    
    <delete id="deleteBatch">
        delete from t_tsjyfw_order where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
	
	
    <insert id="saveBatch" parameterType="java.util.List">
       insert into t_tsjyfw_order
        (
            `uid`, 
            `roomid`, 
            `bookid`, 
            `status`, 
            `createtime`, 
            `invitegetbooktime`, 
            `uname`, 
            `umobile`,
           `ordercode`,
           `isdel`,
            `changes`,
            `cancelreason`,
            `copyid`,
            `searchid`
            
        )
        values
        <foreach collection="list" item="item" index="index"
            separator=",">
            (#{item.uid},
            #{item.roomid},
            #{item.bookid},
            #{item.status},
            #{item.createtime},
            #{item.invitegetbooktime},
            #{item.uname},
            #{item.umobile},
            #{item.ordercode},
            #{item.isdel},
             #{item.changes},
             #{item.cancelreason},
             #{item.copyid},
             #{item.searchid}
            )
        </foreach>
    </insert>
    
    <select id="queryorderlist" resultType="com.lcworld.dto.TsjyfwOrderDTO">
       SELECT
		    a.`status` orderstatus,
		    b.author,
		    a.invitegetbooktime,
		    b.img,
		    b.publisher,
		    b.title,
		    a.id orderid,
		    a.ordercode,
		    DATE_FORMAT(a.createtime, '%Y-%m-%d %H:%i') createtime,
		    a.invitegetbooktime,
		    a.changes
		FROM
		    t_tsjyfw_order a
		INNER JOIN t_tsjyfw_book b ON a.bookid = b.id
		where 1=1 and a.isdel =0
		<if test="uid != null and uid != ''">
          and a.uid =#{uid}
        </if>
          <if test="orderid != null and orderid != ''">
            and a.id =#{orderid}
        </if>
         <if test="statuslist != null and statuslist.size > 0">
          and a.status in 
           <foreach item="id" collection="statuslist" open="(" separator="," close=")">
            #{id}
        </foreach>
        </if>
		order by a.createtime desc 
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>
    
      <select id="queryorderList" resultType="map">
        select a.*,b.title bookname from t_tsjyfw_order a 
        INNER JOIN t_tsjyfw_book b on a.bookid = b.id where 1=1
          <if test="status != null and status != ''" > and a.status = #{status}</if>
           <if test="ordercode != null and ordercode != ''" > and a.ordercode like '%${ordercode}%'</if>
           <if test="username != null and username != ''" > and a.uname like  '%${username}%'</if>
           <if test="bookname != null and bookname != ''" > and b.title like  '%${bookname}%'</if>
           <if test="starttime != null and starttime != ''"> and a.createtime &gt;= str_to_date(#{starttime},'%Y-%m-%d %H:%i')</if>
           <if test="endtime != null and endtime != ''"> and a.createtime &lt;= str_to_date(#{endtime},'%Y-%m-%d %H:%i')</if>
        order by a.createtime desc
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>
    
    <select id="queryorderTotal" resultType="int">
        select count(*) from t_tsjyfw_order a 
        INNER JOIN t_tsjyfw_book b on a.bookid = b.id where 1=1
         <if test="status != null and status != ''" > and a.status = #{status}</if>
           <if test="ordercode != null and ordercode != ''" > and a.ordercode like '%${ordercode}%'</if>
           <if test="username != null and username != ''" > and a.uname like  '%${username}%'</if>
           <if test="bookname != null and bookname != ''" > and b.title like  '%${bookname}%'</if>
           <if test="starttime != null and starttime != ''"> and a.createtime &gt;= str_to_date(#{starttime},'%Y-%m-%d %H:%i')</if>
           <if test="endtime != null and endtime != ''"> and a.createtime &lt;= str_to_date(#{endtime},'%Y-%m-%d %H:%i')</if>
    </select>
    
   

</mapper>