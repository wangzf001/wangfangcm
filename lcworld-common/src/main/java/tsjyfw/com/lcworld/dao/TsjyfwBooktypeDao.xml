<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.TsjyfwBooktypeDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.TsjyfwBooktypeEntity" id="tsjyfwBooktypeMap">
        <result property="id" column="id"/>
        <result property="typename" column="typename"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.TsjyfwBooktypeEntity">
		select * from t_tsjyfw_booktype where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.TsjyfwBooktypeEntity">
		select * from t_tsjyfw_booktype
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_tsjyfw_booktype 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.TsjyfwBooktypeEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_tsjyfw_booktype
		(
			`typename`
		)
		values
		(
			#{typename}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.TsjyfwBooktypeEntity">
		update t_tsjyfw_booktype 
		<set>
			<if test="typename != null">`typename` = #{typename}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_tsjyfw_booktype where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_tsjyfw_booktype where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>