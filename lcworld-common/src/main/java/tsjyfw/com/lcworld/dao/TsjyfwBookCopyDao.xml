<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.TsjyfwBookCopyDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.TsjyfwBookCopyEntity" id="tsjyfwBookCopyMap">
        <result property="id" column="id"/>
        <result property="searchid" column="searchid"/>
        <result property="original" column="original"/>
        <result property="bookid" column="bookid"/>
        <result property="borrowstatus" column="borrowstatus"/>
        <result property="borrowcount" column="borrowcount"/>
        <result property="title" column="title"/>
        <result property="subtitle" column="subtitle"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.TsjyfwBookCopyEntity">
		select * from t_tsjyfw_book_copy where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.TsjyfwBookCopyEntity">
		select * from t_tsjyfw_book_copy where 1=1
		<if test="bookid != null and bookid != ''">
		  and bookid =#{bookid}
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_tsjyfw_book_copy where 1=1
		<if test="bookid != null and bookid != ''">
          and bookid =#{bookid}
        </if>
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.TsjyfwBookCopyEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_tsjyfw_book_copy
		(
			`searchid`, 
			`original`, 
			`bookid`, 
			`borrowstatus`,
			`borrowcount`,
			`title`,
			`subtitle`
		)
		values
		(
			#{searchid}, 
			#{original}, 
			#{bookid}, 
			#{borrowstatus},
			#{borrowcount},
			#{title},
			#{subtitle}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.TsjyfwBookCopyEntity">
		update t_tsjyfw_book_copy 
		<set>
			<if test="searchid != null">`searchid` = #{searchid}, </if>
			<if test="original != null">`original` = #{original}, </if>
			<if test="bookid != null">`bookid` = #{bookid}, </if>
			<if test="borrowstatus != null">`borrowstatus` = #{borrowstatus},</if>
			<if test="borrowcount != null">`borrowcount` = #{borrowcount},</if>
			<if test="title != null">`title` = #{title},</if>
			<if test="subtitle != null">`subtitle` = #{subtitle}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_tsjyfw_book_copy where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_tsjyfw_book_copy where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	 <update id="saveAddOrderCountBench" parameterType="java.util.List">
        update t_tsjyfw_book_copy  set borrowcount =borrowcount+1,borrowstatus=2 where 1=1 
        and id in 
        <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

</mapper>