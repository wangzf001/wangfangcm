<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.TsjyfwUserrecommandDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.TsjyfwUserrecommandEntity" id="tsjyfwUserrecommandMap">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="author" column="author"/>
        <result property="publisher" column="publisher"/>
        <result property="remark" column="remark"/>
        <result property="uid" column="uid"/>
        <result property="createtime" column="createtime"/>
        <result property="status" column="status"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.TsjyfwUserrecommandEntity">
		select * from t_tsjyfw_userrecommand where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.TsjyfwUserrecommandEntity">
		select * from t_tsjyfw_userrecommand
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_tsjyfw_userrecommand 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.TsjyfwUserrecommandEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_tsjyfw_userrecommand
		(
			`title`, 
			`author`, 
			`publisher`, 
			`remark`, 
			`uid`, 
			`createtime`, 
			`status`
		)
		values
		(
			#{title}, 
			#{author}, 
			#{publisher}, 
			#{remark}, 
			#{uid}, 
			#{createtime}, 
			#{status}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.TsjyfwUserrecommandEntity">
		update t_tsjyfw_userrecommand 
		<set>
			<if test="title != null">`title` = #{title}, </if>
			<if test="author != null">`author` = #{author}, </if>
			<if test="publisher != null">`publisher` = #{publisher}, </if>
			<if test="remark != null">`remark` = #{remark}, </if>
			<if test="uid != null">`uid` = #{uid}, </if>
			<if test="createtime != null">`createtime` = #{createtime}, </if>
			<if test="status != null">`status` = #{status}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_tsjyfw_userrecommand where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_tsjyfw_userrecommand where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	
	<select id="queryrecommandList" resultType="map">
        select a.*,b.realname username,b.mobile  from t_tsjyfw_userrecommand a 
        inner join t_user b on a.uid = b.id where 1=1 
       <if test="status != null and status != ''">
          and a.status = #{status}
       </if>
         <if test="starttime != null and starttime != ''"> and a.createtime &gt;= str_to_date(#{starttime},'%Y-%m-%d %H:%i')</if>
           <if test="endtime != null and endtime != ''"> and a.createtime &lt;= str_to_date(#{endtime},'%Y-%m-%d %H:%i')</if>
             <if test="username != null and username != ''" > and b.realname like '%${username}%'</if>
             <if test="mobile != null and mobile != ''" > and b.mobile like  '%${mobile}%'</if>
         <if test="title != null and title != ''" > and a.title like '%${title}%'</if>
        order by a.createtime desc
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>
    
    <select id="queryrecommandTotal" resultType="int">
          select count(*)  from t_tsjyfw_userrecommand a 
        inner join t_user b on a.uid = b.id where 1=1
       <if test="status != null and status != ''">
          and a.status = #{status}
       </if>
        <if test="username != null and username != ''" > and b.realname like  '%${username}%'</if>
        <if test="title != null and title != ''" > and a.title like '%${title}%'</if>
             <if test="mobile != null and mobile != ''" > and b.mobile like '%${mobile}%'</if>
         <if test="starttime != null and starttime != ''"> and a.createtime &gt;= str_to_date(#{starttime},'%Y-%m-%d %H:%i')</if>
           <if test="endtime != null and endtime != ''"> and a.createtime &lt;= str_to_date(#{endtime},'%Y-%m-%d %H:%i')</if>
    </select>

</mapper>