<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.TsjyUsersearchhistoryDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.TsjyUsersearchhistoryEntity" id="tsjyUsersearchhistoryMap">
        <result property="id" column="id"/>
        <result property="key" column="key"/>
        <result property="uid" column="uid"/>
        <result property="createtime" column="createtime"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.TsjyUsersearchhistoryEntity">
		select * from t_tsjy_usersearchhistory where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.TsjyUsersearchhistoryEntity">
		select * from t_tsjy_usersearchhistory where 1=1 
		<if test="uid != null and uid != ''">
		  and uid =  #{uid}
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_tsjy_usersearchhistory 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.TsjyUsersearchhistoryEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_tsjy_usersearchhistory
		(
			`key`, 
			`uid`, 
			`createtime`
		)
		values
		(
			#{key}, 
			#{uid}, 
			#{createtime}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.TsjyUsersearchhistoryEntity">
		update t_tsjy_usersearchhistory 
		<set>
			<if test="key != null">`key` = #{key}, </if>
			<if test="uid != null">`uid` = #{uid}, </if>
			<if test="createtime != null">`createtime` = #{createtime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_tsjy_usersearchhistory where id = #{value}
	</delete>
	
	<delete id="deleteByWhere">
		delete from t_tsjy_usersearchhistory where 1=1
		<if test="uid != null and uid != ''">
		  and uid =#{uid}
		</if>
	</delete>
	
	<delete id="deleteBatch">
		delete from t_tsjy_usersearchhistory where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>