<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.TsjyfwBookFavorcounviewDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.TsjyfwBookFavorcounviewEntity" id="tsjyfwBookFavorcounviewMap">
        <result property="bookid" column="bookid"/>
        <result property="count" column="count"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.TsjyfwBookFavorcounviewEntity">
		select * from t_tsjyfw_book_favorcount_view where bookid = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.TsjyfwBookFavorcounviewEntity">
		select * from t_tsjyfw_book_favorcount_view
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by bookid desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_tsjyfw_book_favorcount_view 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.TsjyfwBookFavorcounviewEntity">
		insert into t_tsjyfw_book_favorcount_view
		(
			`bookid`, 
			`count`
		)
		values
		(
			#{bookid}, 
			#{count}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.TsjyfwBookFavorcounviewEntity">
		update t_tsjyfw_book_favorcount_view 
		<set>
			<if test="count != null">`count` = #{count}</if>
		</set>
		where bookid = #{bookid}
	</update>
	
	<delete id="delete">
		delete from t_tsjyfw_book_favorcount_view where bookid = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_tsjyfw_book_favorcount_view where bookid in 
		<foreach item="bookid" collection="array" open="(" separator="," close=")">
			#{bookid}
		</foreach>
	</delete>

</mapper>