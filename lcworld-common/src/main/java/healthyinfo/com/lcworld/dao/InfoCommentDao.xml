<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.InfoCommentDao">
 
	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.InfoCommentEntity" id="infoCommentMap">
        <result property="id" column="id"/>
        <result property="content" column="content"/>
        <result property="createtime" column="createtime"/>
        <result property="uid" column="uid"/>
        <result property="infoid" column="infoid"/>
        <result property="servicescore" column="servicescore"/>
        <result property="score" column="score"/>
        <result property="productscore" column="productscore"/>
        <result property="type" column="type"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.InfoCommentEntity">
		select * from t_info_comment where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.InfoCommentEntity">
		select * from t_info_comment
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_info_comment 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.InfoCommentEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_info_comment
		(
			`content`, 
			`createtime`, 
			`uid`, 
			`infoid`,
			`servicescore`,
			`score`,
			`productscore`,
			`type`
		)
		values
		(
			#{content}, 
			#{createtime}, 
			#{uid}, 
			#{infoid},
			#{servicescore},
			#{score},
			#{productscore},
			#{type}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.InfoCommentEntity">
		update t_info_comment 
		<set>
			<if test="content != null">`content` = #{content}, </if>
			<if test="createtime != null">`createtime` = #{createtime}, </if>
			<if test="uid != null">`uid` = #{uid}, </if>
			<if test="infoid != null">`infoid` = #{infoid},</if>
			<if test="servicescore != null">`servicescore` = #{servicescore},</if>
			<if test="score != null">`score` = #{score}, </if>
			<if test="productscore != null">`productscore` = #{productscore}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_info_comment where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_info_comment where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	<select id="querycommentList" resultType="map">
         select a.*,b.realname from t_info_comment a
        left join t_user b on a.uid = b.id 
        where 1=1 
        <if test="infoid != null and infoid != ''">
            and a.infoid=#{infoid} 
        </if>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>
    
        <select id="querycommentTotal" resultType="int">
        select count(*) from t_info_comment a left join t_user b on a.uid = b.id 
        where 1=1
          <if test="infoid != null and infoid != ''">
            and a.infoid=#{infoid} 
        </if>
    </select>
</mapper>