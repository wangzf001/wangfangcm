<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.LffwPositionDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.LffwPositionEntity" id="lffwPositionMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.LffwPositionEntity">
		select * from t_lffw_position where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.LffwPositionEntity">
		select * from t_lffw_position
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_lffw_position 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.LffwPositionEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_lffw_position
		(
			`name`
		)
		values
		(
			#{name}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.LffwPositionEntity">
		update t_lffw_position 
		<set>
			<if test="name != null">`name` = #{name}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_lffw_position where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_lffw_position where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>