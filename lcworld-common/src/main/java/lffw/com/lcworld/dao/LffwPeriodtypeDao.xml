<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.LffwPeriodtypeDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.LffwPeriodtypeEntity" id="lffwPeriodtypeMap">
        <result property="id" column="id"/>
        <result property="starttime" column="starttime"/>
        <result property="endtime" column="endtime"/>
        <result property="name" column="name"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.LffwPeriodtypeEntity">
		select * from t_lffw_periodtype where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.LffwPeriodtypeEntity">
		SELECT * from t_lffw_period where 1=1 order by SPLIT_STR(starttime, ':', 1)+0
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_lffw_periodtype 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.LffwPeriodtypeEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_lffw_periodtype
		(
			`starttime`, 
			`endtime`, 
			`name`
		)
		values
		(
			#{starttime}, 
			#{endtime}, 
			#{name}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.LffwPeriodtypeEntity">
		update t_lffw_periodtype 
		<set>
			<if test="starttime != null">`starttime` = #{starttime}, </if>
			<if test="endtime != null">`endtime` = #{endtime}, </if>
			<if test="name != null">`name` = #{name}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_lffw_periodtype where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_lffw_periodtype where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	
     <resultMap type="com.lcworld.dto.LffwscheduleDTO"  id="lffwtimeResultMap">
         <result property="typeid" column="typeid"/>
         <result property="starttime" column="starttime"/>
        <result property="endtime" column="endtime"/>
        <result property="name" column="name"/>
        <result property="barberid" column="barberid"/>
        <!-- 所有分类 -->
        <collection property="schedulelist" 
            column="{typeid=typeid,barberid=barberid}" select="com.lcworld.dao.LffwBarberScheduleDao.querytimeList">
        </collection>
    </resultMap>
    
    <select id="querytimelist" resultMap="lffwtimeResultMap1">
       SELECT
			    min(a.id) id ,
			    a.scheduledate,
			    a.consultperiodid,
			    a. STATUS,
			    b.starttime,
			    b.endtime
			FROM
			    t_lffw_barber_schedule a
			INNER JOIN t_lffw_period b ON a.consultperiodid = b.id
			AND STR_TO_DATE(
			    CONCAT(
			        a.scheduledate,
			        ' ',
			        b.starttime
			    ),
			    '%Y-%m-%d %H:%i'
			) BETWEEN now()
			AND DATE_ADD(now(), INTERVAL 2 DAY)
			WHERE
			    1 = 1
			     <if test="barberid != null and barberid != ''">
            and  a.barberid = #{barberid} 
        </if>
			GROUP BY
			    a.scheduledate,
			    a.consultperiodid,
			    a. STATUS,
			    b.starttime,
			    b.endtime
       
        order by  STR_TO_DATE(CONCAT(a.scheduledate,' ',b.starttime),'%Y-%m-%d %H:%i') asc

    </select>
    
     <resultMap type="com.lcworld.dto.LffwscheduleDTO"  id="lffwtimeResultMap1">
          <result property="scheduleDate" column="scheduleDate"/>
        <!-- 所有分类 -->
        <collection property="schedulelist" javaType="list" ofType="com.lcworld.entity.LffwBarberScheduleEntity">
             <result property="id" column="id"/>
	        <result property="barberid" column="barberid"/>
	        <result property="starttime" column="starttime"/>
	        <result property="endtime" column="endtime"/>
	        <result property="createtime" column="createtime"/>
	        <result property="consultperiodid" column="consultperiodid"/>
	        <result property="scheduledate" column="scheduledate"/>
	        <result property="status" column="status"/>
        </collection>
    </resultMap>

</mapper>