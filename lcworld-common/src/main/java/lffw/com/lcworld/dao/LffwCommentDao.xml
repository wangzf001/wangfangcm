<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.LffwCommentDao">
 
	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.LffwCommentEntity" id="lffwCommentMap">
        <result property="id" column="id"/>
        <result property="imgs" column="imgs"/>
        <result property="content" column="content"/>
        <result property="orderid" column="orderid"/>
        <result property="uid" column="uid"/>
        <result property="barberid" column="barberid"/>
        <result property="createtime" column="createtime"/>
        <result property="score" column="score"/>
        <result property="anonymous" column="anonymous"/>
        <result property="servicescore" column="servicescore"/>
        <result property="productscore" column="productscore"/>
        <result property="type" column="type"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.LffwCommentEntity">
		select * from t_lffw_comment where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.LffwCommentEntity">
		select *,imgs imglist from t_lffw_comment where 1=1 
		<if test="barberid != null">
		  and barberid =#{barberid}
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_lffw_comment where 1=1
		<if test="barberid != null" >
		      and barberid =#{barberid}
		</if>
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.LffwCommentEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_lffw_comment
		(
			`imgs`, 
			`content`, 
			`orderid`, 
			`uid`, 
			`barberid`, 
			`createtime`, 
			`score`, 
			`anonymous`,
			`servicescore`,
			`productscore`,	
			`type`		
		)
		values
		(
			#{imgs}, 
			#{content}, 
			#{orderid}, 
			#{uid}, 
			#{barberid}, 
			#{createtime}, 
			#{score}, 
			#{anonymous},
			#{servicescore},
			#{productscore},
			#{type}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.LffwCommentEntity">
		update t_lffw_comment 
		<set>
			<if test="imgs != null">`imgs` = #{imgs}, </if>
			<if test="content != null">`content` = #{content}, </if>
			<if test="orderid != null">`orderid` = #{orderid}, </if>
			<if test="uid != null">`uid` = #{uid}, </if>
			<if test="barberid != null">`barberid` = #{barberid}, </if>
			<if test="createtime != null">`createtime` = #{createtime}, </if>
			<if test="score != null">`score` = #{score}, </if>
			<if test="anonymous != null">`anonymous` = #{anonymous},</if>
			<if test="servicescore != null">`servicescore` = #{servicescore},</if>
			<if test="productscore != null">`productscore` = #{productscore}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_lffw_comment where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_lffw_comment where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	    <select id="queryScore" resultType="java.lang.Double">
        select AVG(score)  from t_lffw_comment   where barberid =#{barberid} group by barberid
    </select>
    
         <select id="queryCommentList" resultType="com.lcworld.dto.LffwCommentDTO">
        select 
        a.imgs,a.content,a.orderid,a.uid,a.barberid,date_format(a.createtime,'%Y-%m-%d') createtime,
        a.score,a.anonymous,a.servicescore ,b.photo,b.realname
         from t_lffw_comment a 
        inner join t_user b on a.uid = b.id where 1=1
        <if test="barberid != null and barberid != ''">
          and a.barberid = #{barberid}
        </if>
        order by createtime desc 
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>
</mapper>