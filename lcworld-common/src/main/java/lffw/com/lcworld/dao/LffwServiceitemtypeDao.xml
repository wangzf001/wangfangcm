<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.LffwServiceitemtypeDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.LffwServiceitemtypeEntity" id="lffwServiceitemtypeMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="minprice" column="minprice"/>
        <result property="maxprice" column="maxprice"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.LffwServiceitemtypeEntity">
		select * from t_lffw_serviceitemtype where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.LffwServiceitemtypeEntity">
		select * from t_lffw_serviceitemtype
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_lffw_serviceitemtype 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.LffwServiceitemtypeEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_lffw_serviceitemtype
		(
			`name`, 
			`minprice`, 
			`maxprice`
		)
		values
		(
			#{name}, 
			#{minprice}, 
			#{maxprice}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.LffwServiceitemtypeEntity">
		update t_lffw_serviceitemtype 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="minprice != null">`minprice` = #{minprice}, </if>
			<if test="maxprice != null">`maxprice` = #{maxprice}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_lffw_serviceitemtype where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_lffw_serviceitemtype where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	 <resultMap type="com.lcworld.dto.LffwServiceItemDTO"  id="lffwServiceitemResultMap">
         <result property="typeid" column="typeid"/>
        <result property="name" column="name"/>
        <result property="minprice" column="minprice"/>
        <result property="maxprice" column="maxprice"/>
        <!-- 所有分类 -->
        <collection property="itemlist"  
            column="{typeid=typeid}" select="com.lcworld.dao.LffwServiceitemDao.queryList">
        </collection>
    </resultMap>
    
    <select id="queryitemlist" resultMap="lffwServiceitemResultMap">
        select id typeid,name,minprice,maxprice  from t_lffw_serviceitemtype
      
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>
    

</mapper>