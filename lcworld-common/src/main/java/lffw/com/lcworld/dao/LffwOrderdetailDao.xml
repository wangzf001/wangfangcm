<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.LffwOrderdetailDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.LffwOrderdetailEntity" id="lffwOrderdetailMap">
        <result property="id" column="id"/>
        <result property="itemid" column="itemid"/>
        <result property="orderid" column="orderid"/>
        <result property="itemtypeid" column="itemtypeid"/>
        <result property="price" column="price"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.LffwOrderdetailEntity">
		select * from t_lffw_orderdetail where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.LffwOrderdetailEntity">
		select * from t_lffw_orderdetail where 1=1
		<if test="orderid != null and orderid != ''">
		  and orderid =#{orderid}
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_lffw_orderdetail 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.LffwOrderdetailEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_lffw_orderdetail
		(
			`itemid`, 
			`orderid`,
			`itemtypeid`,
			`price`
			
			
		)
		values
		(
			#{itemid}, 
			#{orderid},
			#{itemtypeid},
			#{price}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.LffwOrderdetailEntity">
		update t_lffw_orderdetail 
		<set>
			<if test="itemid != null">`itemid` = #{itemid}, </if>
			<if test="orderid != null">`orderid` = #{orderid},</if>
			<if test="itemtypeid != null">`itemtypeid` = #{itemtypeid},</if>
			<if test="price != null">`price` = #{price}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_lffw_orderdetail where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_lffw_orderdetail where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	<insert id="saveBatch"  useGeneratedKeys="true" keyProperty="id">
        insert into t_lffw_orderdetail
        (
            itemid, 
            orderid,
            itemtypeid,
            price
        )
        values
        <foreach collection="list" item="item" index="index"
            separator=",">
            (
                #{item.itemid}, 
                #{item.orderid},
                #{item.itemtypeid},
                #{item.price}
            )
        </foreach>
    </insert>
    
    <select id="querydetailList" resultType="map">
        SELECT
             a.price,a.orderid,a.id,b.`name` ,c.`name` typename
		FROM
		    t_lffw_orderdetail a
		INNER JOIN t_lffw_serviceitem b ON a.itemid = b.id
		INNER JOIN t_lffw_serviceitemtype c ON c.id = b.typeid
		where a.orderid = #{orderid}
        
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>
    
    <select id="querydetailTotal" resultType="int">
        SELECT
           count(*)
        FROM
            t_lffw_orderdetail a
        INNER JOIN t_lffw_serviceitem b ON a.itemid = b.id
        INNER JOIN t_lffw_serviceitemtype c ON c.id = b.typeid
        where a.orderid = #{orderid}
    </select>

</mapper>