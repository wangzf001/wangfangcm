<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.LffwServiceitemDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.LffwServiceitemEntity" id="lffwServiceitemMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="typeid" column="typeid"/>
        <result property="price" column="price"/>
        <result property="createtime" column="createtime"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.LffwServiceitemEntity">
		select * from t_lffw_serviceitem where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.LffwServiceitemEntity">
		select * from t_lffw_serviceitem where 1=1
		<if test="typeid != null and typeid != ''">
		  and typeid = #{typeid}
		</if>
		
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_lffw_serviceitem 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.LffwServiceitemEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_lffw_serviceitem
		(
			`name`, 
			`typeid`, 
			`price`, 
			`createtime`
		)
		values
		(
			#{name}, 
			#{typeid}, 
			#{price}, 
			#{createtime}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.LffwServiceitemEntity">
		update t_lffw_serviceitem 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="typeid != null">`typeid` = #{typeid}, </if>
			<if test="price != null">`price` = #{price}, </if>
			<if test="createtime != null">`createtime` = #{createtime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_lffw_serviceitem where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_lffw_serviceitem where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>