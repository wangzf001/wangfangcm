<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.LffwVoucherDao">
 
    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.LffwVoucherEntity" id="lffwVoucherMap">
        <result property="id" column="id"/>
        <result property="roomnum" column="roomnum"/>
        <result property="uid" column="uid"/>
        <result property="price" column="price"/>
        <result property="createtime" column="createtime"/>
        <result property="endtime" column="endtime"/>
        <result property="valid" column="valid"/>
        <result property="tatal" column="tatal"/>
        <result property="remain" column="remain"/>
        <result property="paypass" column="paypass"/>
        <result property="lockcount" column="lockcount"/>
    </resultMap>

    <select id="queryObject" resultType="com.lcworld.entity.LffwVoucherEntity">
        select * from t_lffw_voucher where id = #{value}
    </select>

    <select id="queryList" resultType="com.lcworld.entity.LffwVoucherEntity">
        select * from t_lffw_voucher where 1=1 
        <if test="uid != null ">
          and uid=#{uid}
        </if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>
    
    <select id="queryTotal" resultType="int">
        select count(*) from t_lffw_voucher 
    </select>
   <select id="queryByUid" resultType="com.lcworld.entity.LffwVoucherEntity" parameterType="Integer">
        select * from t_lffw_voucher where uid = #{uid}
    </select> 
     
    <insert id="save" parameterType="com.lcworld.entity.LffwVoucherEntity" useGeneratedKeys="true" keyProperty="id">
        insert into t_lffw_voucher
        (
            `roomnum`, 
            `uid`, 
            `price`, 
            `createtime`, 
            `endtime`, 
            `valid`, 
            `tatal`, 
            `remain`, 
            `paypass`,
            `lockcount`
        )
        values
        (
            #{roomnum}, 
            #{uid}, 
            #{price}, 
            #{createtime}, 
            #{endtime}, 
            #{valid}, 
            #{tatal}, 
            #{remain}, 
            #{paypass},
            #{lockcount}
        )
    </insert>
     
    <update id="update" parameterType="com.lcworld.entity.LffwVoucherEntity">
        update t_lffw_voucher 
        <set>
            <if test="roomnum != null">`roomnum` = #{roomnum}, </if>
            <if test="uid != null">`uid` = #{uid}, </if>
            <if test="price != null">`price` = #{price}, </if>
            <if test="createtime != null">`createtime` = #{createtime}, </if>
            <if test="endtime != null">`endtime` = #{endtime}, </if>
            <if test="valid != null">`valid` = #{valid}, </if>
            <if test="tatal != null">`tatal` = #{tatal}, </if>
            <if test="remain != null">`remain` = #{remain}, </if>
            <if test="paypass != null">`paypass` = #{paypass},</if>
            <if test="lockcount != null">`lockcount` = #{lockcount}</if>
        </set>
        where id = #{id}
    </update>
    
    <delete id="delete">
        delete from t_lffw_voucher where id = #{value}
    </delete>
    
    <delete id="deleteBatch">
        delete from t_lffw_voucher where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>