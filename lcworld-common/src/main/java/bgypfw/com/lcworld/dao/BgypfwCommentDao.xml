<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.BgypfwCommentDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.BgypfwCommentEntity" id="bgypfwCommentMap">
        <result property="id" column="id"/>
        <result property="content" column="content"/>
        <result property="orderid" column="orderid"/>
        <result property="uid" column="uid"/>
        <result property="productid" column="productid"/>
        <result property="createtime" column="createtime"/>
        <result property="commenttype" column="commenttype"/>
        <result property="anonymous" column="anonymous"/>
        <result property="imgs" column="imgs"/>
        <result property="score" column="score"/>
        <result property="servicescore" column="servicescore"/>
        <result property="productscore" column="productscore"/>
        <result property="type" column="type"/>
        <result property="replyname" column="replyname"/>
        <result property="photo" column="photo"/>
         <result property="replyphoto" column="replyphoto"/>
         <result property="realname" column="realname"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.BgypfwCommentEntity">
		select * from t_bgypfw_comment where id = #{value}
	</select>
	<select id="queryStarsCountWithin" resultType="Integer" parameterType="java.util.Map">
		select count(1) from t_bgypfw_comment c
		<where>
			<if test="productId!=null">c.productid = #{productId}</if>
			<if test="minScore!=null">and c.score &gt; #{minScore}</if>
			<if test="maxScore!=null">and c.score &lt;= #{maxScore}</if>
		</where>
	</select>

	<select id="queryList" resultType="com.lcworld.entity.BgypfwCommentEntity" parameterType="java.util.Map">
		SELECT
			c.*
			<if test="auth!=null and auth == 0"> 
			,CASE c.anonymous WHEN 0 THEN IFNULL(u.realname,u.nickname)
			WHEN 1  THEN "无权查看"
			END realname, 
			CASE c.anonymous WHEN 0 THEN u.photo 
			WHEN 1  THEN "无权查看" 
			END  photo
			</if>
			<if test="auth!=null and auth == 1"> 
			,IFNULL(u.realname,u.nickname) realname, u.photo photo
			</if> 
			, (SELECT productname from t_bgypfw_product WHERE id = 1) productname
		FROM
			t_bgypfw_comment c
			left join t_user u on u.id = c.uid
		<where>
			<if test="ids!=null">
				c.id in 
				<foreach item="id" collection="ids" open="(" separator="," close=")">
					#{id}
				</foreach>
			</if>
			<if test="username!=null and username.trim()!=''">and u.user_name like concat('%',#{username},'%')</if>
			<if test="productId!=null">and c.productid = #{productId}</if>
			<if test="commentType!=null and minScore!=null and maxScore!=null">
				and c.score &gt; #{minScore}
				and c.score &lt;= #{maxScore}
			</if>
		</where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_bgypfw_comment c
		left join t_user u on u.id = c.uid
		<where>
			<if test="username!=null and username.trim()!=''">and u.user_name like concat('%',#{username},'%')</if>
			<if test="productId!=null">and c.productid = #{productId}</if>
			<if test="commentType!=null and minScore!=null and maxScore!=null">
				and c.score &gt; #{minScore}
				and c.score &lt;= #{maxScore}
			</if>
		</where>
	</select>
	
	 <select id="queryCommentTotal" resultType="int">
      	select count(*)   from t_bgypfw_comment  t 
		LEFT  JOIN  (select * from t_delivery_order o where o.ordertype=8) d 
		on t.orderid = d.orderid
		  LEFT JOIN  t_user u
		  ON t.uid = u.id
		  where 1=1
        <if test="uid != null">
            and d.did = #{uid}
        </if>
        <if test="scoretype == 1 ">
            and t.score &lt;2
        </if>
         <if test="scoretype == 2 ">
            and t.score between 2 and 4
        </if>
         <if test="scoretype == 3 ">
            and t.score &gt;=4
        </if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by t.id desc
            </otherwise>
        </choose>
    </select>
	
	 
	<insert id="save" parameterType="com.lcworld.entity.BgypfwCommentEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_bgypfw_comment
		(
			`content`, 
			`orderid`, 
			`uid`, 
			`productid`, 
			`createtime`, 
			`score`, 
			`commenttype`, 
			`anonymous`,
			`imgs`,
			`servicescore`,
			`productscore`,
			`type`
			
		)
		values
		(
			#{content}, 
			#{orderid}, 
			#{uid}, 
			#{productid}, 
			#{createtime}, 
			#{score}, 
			#{commenttype}, 
			#{anonymous},
			#{imgs},
			#{servicescore},
			#{productscore},
			#{type}
			
		)
	</insert>
	<update id="update" parameterType="com.lcworld.entity.BgypfwCommentEntity">
		update t_bgypfw_comment 
		<set>
			<if test="content != null">`content` = #{content}, </if>
			<if test="orderid != null">`orderid` = #{orderid}, </if>
			<if test="uid != null">`uid` = #{uid}, </if>
			<if test="productid != null">`productid` = #{productid}, </if>
			<if test="createtime != null">`createtime` = #{createtime}, </if>
			<if test="score != null">`score` = #{score}, </if>
			<if test="commenttype != null">`commenttype` = #{commenttype}, </if>
			<if test="anonymous != null">`anonymous` = #{anonymous},</if>
			<if test="imgs != null">`imgs` = #{imgs},</if>
			<if test="servicescore != null">`servicescore` = #{servicescore},</if>
			<if test="productscore != null">`productscore` = #{productscore}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_bgypfw_comment where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_bgypfw_comment where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	 <select id="queryListByScoretype" resultMap="bgypfwCommentMap">
       	select t.*,u.realname  as 'replyname',u.photo as 'replyphoto',d.did  from t_bgypfw_comment  t 
		LEFT  JOIN  (select * from t_delivery_order o where o.ordertype=8) d 
		on t.orderid = d.orderid
		  LEFT JOIN  t_user u
		  ON t.uid = u.id
		  where 1=1
        <if test="uid != null">
            and d.did = #{uid}
        </if>
        <if test="scoretype == 1 ">
            and t.score &lt;2
        </if>
         <if test="scoretype == 2 ">
            and t.score between 2 and 4
        </if>
         <if test="scoretype == 3 ">
            and t.score &gt;=4
        </if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by t.id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>
	
	
</mapper>