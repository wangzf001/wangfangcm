<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.AddressDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.AddressEntity" id="addressMap">
        <result property="id" column="id"/>
        <result property="uid" column="uid"/>
        <result property="realname" column="realname"/>
        <result property="mobile" column="mobile"/>
        <result property="address" column="address"/>
        <result property="isDefault" column="is_default"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.AddressEntity">
		select * from t_address where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.AddressEntity">
	select * from t_address a
		<where>
			<if test="isDefault != null">a.`is_default` = #{isDefault}</if>
			<if test="uid != null">and a.`uid` = #{uid}</if>
		</where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_address a
		<where>
			<if test="isDefault != null">a.`is_default` = #{isDefault}</if>
			<if test="uid != null">and a.`uid` = #{uid}</if>
		</where>
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.AddressEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_address
		(
			`uid`, 
			`realname`, 
			`mobile`, 
			`address`, 
			`is_default`
		)
		values
		(
			#{uid}, 
			#{realname}, 
			#{mobile}, 
			#{address}, 
			#{isDefault}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.AddressEntity">
		update t_address 
		<set>
			<if test="uid != null">`uid` = #{uid}, </if>
			<if test="realname != null">`realname` = #{realname}, </if>
			<if test="mobile != null">`mobile` = #{mobile}, </if>
			<if test="address != null">`address` = #{address}, </if>
			<if test="isDefault != null">`is_default` = #{isDefault}</if>
		</set>
		where id = #{id}
	</update>
	<update id="clearAllDefault" parameterType="Integer">
		update t_address 
		<set>
			`is_default` = 0
		</set>
		where uid = #{uid}
	</update>
	
	<delete id="delete">
		delete from t_address where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_address where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>