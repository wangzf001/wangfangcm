<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.DeliveryOrderDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.DeliveryOrderEntity" id="deliveryOrderMap">
        <result property="id" column="id"/>
        <result property="did" column="did"/>
        <result property="orderid" column="orderid"/>
        <result property="createtime" column="createtime"/>
        <result property="deliverytime" column="deliverytime"/>
        <result property="status" column="status"/>
        <result property="ordertype" column="ordertype"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.DeliveryOrderEntity">
		select * from t_delivery_order where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.DeliveryOrderEntity">
		select * from t_delivery_order
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_delivery_order 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.DeliveryOrderEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_delivery_order
		(
			`did`, 
			`orderid`, 
			`createtime`, 
			`deliverytime`, 
			`status`,
			`ordertype`
		)
		values
		(
			#{did}, 
			#{orderid}, 
			#{createtime}, 
			#{deliverytime}, 
			#{status},
			#{ordertype}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.DeliveryOrderEntity">
		update t_delivery_order 
		<set>
			<if test="did != null">`did` = #{did}, </if>
			<if test="orderid != null">`orderid` = #{orderid}, </if>
			<if test="createtime != null">`createtime` = #{createtime}, </if>
			<if test="deliverytime != null">`deliverytime` = #{deliverytime}, </if>
			<if test="status != null">`status` = #{status},</if>
			<if test="ordertype != null">`ordertype` = #{ordertype}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_delivery_order where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_delivery_order where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>