<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.BgypfwProducsupplierDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.BgypfwProducsupplierEntity" id="bgypfwProducsupplierMap">
        <result property="id" column="id"/>
        <result property="supplierName" column="supplier_name"/>
        <result property="supplierAddress" column="supplier_address"/>
        <result property="supplierTel" column="supplier_tel"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.BgypfwProducsupplierEntity">
		select * from t_bgypfw_product_supplier where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.BgypfwProducsupplierEntity">
		select * from t_bgypfw_product_supplier
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_bgypfw_product_supplier 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.BgypfwProducsupplierEntity">
		insert into t_bgypfw_product_supplier
		(
			`id`, 
			`supplier_name`, 
			`supplier_address`, 
			`supplier_tel`, 
			`create_time`
		)
		values
		(
			#{id}, 
			#{supplierName}, 
			#{supplierAddress}, 
			#{supplierTel}, 
			#{createTime}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.BgypfwProducsupplierEntity">
		update t_bgypfw_product_supplier 
		<set>
			<if test="supplierName != null">`supplier_name` = #{supplierName}, </if>
			<if test="supplierAddress != null">`supplier_address` = #{supplierAddress}, </if>
			<if test="supplierTel != null">`supplier_tel` = #{supplierTel}, </if>
			<if test="createTime != null">`create_time` = #{createTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_bgypfw_product_supplier where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_bgypfw_product_supplier where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>