		<if test="notproductid != nulll and notproductid != ''">
			and id not in (select id from t_bgypfw_product_attrcata where productid =#{notproductid})
		</if>
		<if test="inproductid != nulll and inproductid != ''">
			and id  in (select id from t_bgypfw_product_attrcata where productid =#{inproductid})
		</if>
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.BgypfwSkufirstcataEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_bgypfw_skufirstcata
		(
			`skucataname`, 
			`pskucataid`, 
			`createtime`
		)
		values
		(
			#{skucataname}, 
			#{pskucataid}, 
			#{createtime}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.BgypfwSkufirstcataEntity">
		update t_bgypfw_skufirstcata 
		<set>
			<if test="skucataname != null">`skucataname` = #{skucataname}, </if>
			<if test="pskucataid != null">`pskucataid` = #{pskucataid}, </if>
