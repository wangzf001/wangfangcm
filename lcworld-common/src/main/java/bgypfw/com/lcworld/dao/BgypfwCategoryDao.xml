<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.BgypfwCategoryDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.BgypfwCategoryEntity" id="bgypfwCategoryMap">
        <result property="id" column="id"/>
        <result property="cname" column="cname"/>
        <result property="pid" column="pid"/>
        <result property="cgrade" column="cgrade"/>
        <result property="img" column="img"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.BgypfwCategoryEntity">
		select * from t_bgypfw_category where id = #{value}
	</select>
	<select id="queryCategoryByName" resultType="com.lcworld.entity.BgypfwCategoryEntity">
		select * from t_bgypfw_category
		<where>
			<if test="name != null and name != ''">
				AND locate(#{name},cname)>0
			</if>
			<if test="grade != null and grade != ''">
				AND cgrade = #{grade}
			</if>
		</where>
	</select>

	<select id="queryList" resultType="com.lcworld.entity.BgypfwCategoryEntity">
		select c.*,(select cname from t_bgypfw_category where id = c.pid) pname from t_bgypfw_category c
		<where>
			<if test="cgrade!=null">c.cgrade = #{cgrade}</if>
			<if test="pid!=null">and c.pid = #{pid}</if>
		</where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_bgypfw_category c
		<where>
			<if test="cgrade!=null">c.cgrade = #{cgrade}</if>
			<if test="pid!=null">and c.pid = #{pid}</if>
		</where>
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.BgypfwCategoryEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_bgypfw_category
		(
			`cname`, 
			`pid`, 
			`cgrade`, 
			`img`
		)
		values
		(
			#{cname}, 
			#{pid}, 
			#{cgrade}, 
			#{img}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.BgypfwCategoryEntity">
		update t_bgypfw_category 
		<set>
			<if test="cname != null">`cname` = #{cname}, </if>
			<if test="pid != null">`pid` = #{pid}, </if>
			<if test="cgrade != null">`cgrade` = #{cgrade}, </if>
			<if test="img != null">`img` = #{img}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_bgypfw_category where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_bgypfw_category where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>