<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.BgypfwProducbrandDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.BgypfwProducbrandEntity" id="bgypfwProducbrandMap">
        <result property="id" column="id"/>
        <result property="brandName" column="brand_name"/>
        <result property="imgUrl" column="img_url"/>
        <result property="cataId" column="cata_id"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.BgypfwProducbrandEntity">
		select * from t_bgypfw_product_brand where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.BgypfwProducbrandEntity">
		select * from t_bgypfw_product_brand
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_bgypfw_product_brand 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.BgypfwProducbrandEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_bgypfw_product_brand
		(
			`brand_name`, 
			`img_url`, 
			`cata_id`
		)
		values
		(
			#{brandName}, 
			#{imgUrl}, 
			#{cataId}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.BgypfwProducbrandEntity">
		update t_bgypfw_product_brand 
		<set>
			<if test="brandName != null">`brand_name` = #{brandName}, </if>
			<if test="imgUrl != null">`img_url` = #{imgUrl}, </if>
			<if test="cataId != null">`cata_id` = #{cataId}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_bgypfw_product_brand where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_bgypfw_product_brand where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>