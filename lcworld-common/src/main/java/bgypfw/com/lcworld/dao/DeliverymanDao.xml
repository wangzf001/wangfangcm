<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.DeliverymanDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.DeliverymanEntity" id="deliverymanMap">
        <result property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="regionId" column="region_id"/>
        <result property="photo" column="photo"/>
        <result property="mobile" column="mobile"/>
        <result property="servicetypeid" column="servicetypeid"/>
        <result property="createtime" column="createtime"/>
        <result property="valid" column="valid"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.DeliverymanEntity">
		select * from t_deliveryman where id = #{value}
	</select>
	<select id="queryByCondition" resultType="com.lcworld.entity.DeliverymanEntity">
		select * from t_deliveryman where 1=1 
		<if test="id != null">and id = #{id}</if>
		<if test="mobile != null">and username = #{mobile}</if>
		<if test="servicetypeid != null">and servicetypeid = #{servicetypeid}</if>
	</select>
	
	<select id="wzbqueryByCondition" resultType="com.lcworld.entity.DeliverymanEntity">
		select * from t_deliveryman where 1=1 
		<if test="id != null">and id = #{id}</if>
		<if test="mobile != null">and mobile = #{mobile}</if>
		<if test="servicetypeid != null">and servicetypeid = #{servicetypeid}</if>
	</select>
	
	<update id="updatePasswordByMobileAndServiceTypeId">
		update t_deliveryman set password=#{password} where username = #{mobile} and servicetypeid = #{servicetypeid}
	</update>

	<select id="queryList" resultType="com.lcworld.entity.DeliverymanEntity">
		SELECT
			d.*,IFNULL(a.ordernum,0) ordernum
		FROM
			t_deliveryman d
		LEFT JOIN (
			SELECT
				o.did did,
				SUM(1) ordernum
			FROM
				t_delivery_order o
		<where>
			<if test="starttime != null and endtime != null">
				AND o.deliverytime &gt;= #{starttime}
				AND o.deliverytime &lt; #{endtime}
			</if>
		</where>
			GROUP BY
				o.did
		) a ON a.did = d.id
		<where>
			<if test="starttime != null and endtime != null">
				AND d.servicetypeid=#{servicetypeid}
			</if>
		</where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <when test="starttime != null and endtime != null">
                ORDER BY a.ordernum
            </when>
			<otherwise>
                order by d.id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_deliveryman 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.DeliverymanEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_deliveryman
		(
			`username`, 
			`password`, 
			`region_id`, 
			`photo`, 
			`mobile`,
			`servicetypeid`,
			`createtime`,
			`valid`
		)
		values
		(
			#{username}, 
			#{password}, 
			#{regionId}, 
			#{photo}, 
			#{mobile},
			#{servicetypeid},
			#{createtime},
			#{valid}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.DeliverymanEntity">
		update t_deliveryman 
		<set>
			<if test="username != null">`username` = #{username}, </if>
			<if test="password != null">`password` = #{password}, </if>
			<if test="regionId != null">`region_id` = #{regionId}, </if>
			<if test="photo != null">`photo` = #{photo}, </if>
			<if test="mobile != null">`mobile` = #{mobile},</if>
			<if test="servicetypeid != null">`servicetypeid` = #{servicetypeid},</if>
			<if test="createtime != null">`createtime` = #{createtime},</if>
			<if test="valid != null">`valid` = #{valid}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_deliveryman where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_deliveryman where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	<select id="queryByPhoneAndServiceType" resultType="int">
		SELECT
			count(t.id)
		FROM
			t_deliveryman AS t
		WHERE
			t.mobile=#{mobile}
		AND t.servicetypeid=#{servicetypeid}
		AND t.id != #{id}
	</select>


</mapper>