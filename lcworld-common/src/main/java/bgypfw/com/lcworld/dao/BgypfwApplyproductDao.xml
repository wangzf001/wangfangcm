<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.BgypfwApplyproductDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.BgypfwApplyproductEntity" id="bgypfwApplyproductMap">
        <result property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="mobile" column="mobile"/>
        <result property="productname" column="productname"/>
        <result property="productcount" column="productcount"/>
        <result property="remark" column="remark"/>
        <result property="createtime" column="createtime"/>
        <result property="status" column="status"/>
        <result property="uid" column="uid"/>
        <result property="failedReason" column="failed_reason"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.BgypfwApplyproductEntity">
		select * from t_bgypfw_applyproduct where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.BgypfwApplyproductEntity">
		select * from t_bgypfw_applyproduct ap
		<where>
			<if test="uid != null">ap.uid = #{uid}</if>
			<if test="status != null">and ap.status = #{status}</if>
			<if test="keyword != null and keyword.trim()!=''">and ap.username like concat('%',#{keyword},'%') or ap.mobile like concat('%',#{keyword},'%') or ap.productname like concat('%',#{keyword},'%')</if>
		</where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by ap.createtime desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_bgypfw_applyproduct ap
		<where>
			<if test="uid != null">ap.uid = #{uid}</if>
			<if test="status != null">and ap.status = #{status}</if>
			<if test="keyword != null and keyword.trim()!=''">and ap.username like concat('%',#{keyword},'%') or ap.mobile like concat('%',#{keyword},'%') or ap.productname like concat('%',#{keyword},'%')</if>
		</where>
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.BgypfwApplyproductEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_bgypfw_applyproduct
		(
			`username`, 
			`mobile`, 
			`productname`, 
			`productcount`, 
			`remark`, 
			`createtime`, 
			`status`,
			`uid`,
			`failed_reason`
		)
		values
		(
			#{username}, 
			#{mobile}, 
			#{productname}, 
			#{productcount}, 
			#{remark}, 
			#{createtime}, 
			#{status},
			#{uid},
			#{failedReason}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.BgypfwApplyproductEntity">
		update t_bgypfw_applyproduct 
		<set>
			<if test="username != null">`username` = #{username}, </if>
			<if test="mobile != null">`mobile` = #{mobile}, </if>
			<if test="productname != null">`productname` = #{productname}, </if>
			<if test="productcount != null">`productcount` = #{productcount}, </if>
			<if test="remark != null">`remark` = #{remark}, </if>
			<if test="createtime != null">`createtime` = #{createtime}, </if>
			<if test="status != null">`status` = #{status},</if>
			<if test="uid != null">`uid` = #{uid},</if>
			<if test="failedReason != null">`failed_reason` = #{failedReason}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_bgypfw_applyproduct where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_bgypfw_applyproduct where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>