<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.BgypfwSkuCataInfoDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.BgypfwSkuCataInfoEntity" id="bgypfwSkuCataInfoMap">
        <result property="id" column="id"/>
        <result property="skuid" column="skuid"/>
        <result property="cataid" column="cataid"/>
        <result property="content" column="content"/>
        <result property="productid" column="productid"/>
    </resultMap>
    
    <resultMap type="com.lcworld.dto.BgypSkuDto" id="skudtomap">
         <result property="cataid" column="cataid"/>
         <result property="cataname" column="cataname"/>
	        <collection property="infolist" javaType="com.lcworld.entity.BgypfwSkuCataInfoEntity">
		        <result property="cataid" column="cataid"/>
		        <result property="content" column="content"/>
		        <result property="productid" column="productid"/>
	        </collection>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.BgypfwSkuCataInfoEntity">
		select * from t_bgypfw_sku_cata_info where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.BgypfwSkuCataInfoEntity">
		select * from t_bgypfw_sku_cata_info where 1=1
		<if test="skuid != null and skuid != ''">
			and skuid = #{skuid}
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_bgypfw_sku_cata_info where 1=1
			<if test="skuid != null and skuid != ''">
			and skuid = #{skuid}
		</if>
	</select>
	
 	<select id="querySkuList" resultMap="skudtomap">
		select a.*,b.skucataname cataname from t_bgypfw_sku_cata_info a 
		inner join t_bgypfw_skufirstcata b on a.cataid =b.id
		 where 1=1
		<if test="productId != null and productId != ''">
			and a.productid = #{productId}
		</if>
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.BgypfwSkuCataInfoEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_bgypfw_sku_cata_info
		(
			`skuid`, 
			`cataid`, 
			`content`,
			`productid`
		)
		values
		(
			#{skuid}, 
			#{cataid}, 
			#{content},
			#{productid}
		)
	</insert>
	
	 
	<insert id="saveBatch" parameterType="com.lcworld.entity.BgypfwSkuCataInfoEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_bgypfw_sku_cata_info
		(
			`skuid`, 
			`cataid`, 
			`content`,
			`productid`
		)
		values
		  <foreach collection="list" item="item" index="index"
            separator=",">
		(
			#{item.skuid}, 
			#{item.cataid}, 
			#{item.content},
			#{item.productid}
		)
		</foreach>
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.BgypfwSkuCataInfoEntity">
		update t_bgypfw_sku_cata_info 
		<set>
			<if test="skuid != null">`skuid` = #{skuid}, </if>
			<if test="cataid != null">`cataid` = #{cataid}, </if>
			<if test="content != null">`content` = #{content},</if>
			<if test="productid != null">`productid` = #{productid}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_bgypfw_sku_cata_info where id = #{value}
	</delete>
	
	<delete id="deletebyskuid">
		delete from t_bgypfw_sku_cata_info where skuid = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_bgypfw_sku_cata_info where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>