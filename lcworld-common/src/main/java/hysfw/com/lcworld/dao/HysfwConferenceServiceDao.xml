<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.HysfwConferenceServiceDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.HysfwConferenceServiceEntity" id="hysfwConferenceServiceMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="code" column="code"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.HysfwConferenceServiceEntity">
		select * from t_hysfw_conference_service where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.HysfwConferenceServiceEntity">
		select * from t_hysfw_conference_service
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_hysfw_conference_service 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.HysfwConferenceServiceEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_hysfw_conference_service
		(
			`name`, 
			`code`
		)
		values
		(
			#{name}, 
			#{code}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.HysfwConferenceServiceEntity">
		update t_hysfw_conference_service 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="code != null">`code` = #{code}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_hysfw_conference_service where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_hysfw_conference_service where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>