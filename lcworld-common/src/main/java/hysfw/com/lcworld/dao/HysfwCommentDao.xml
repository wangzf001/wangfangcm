<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.HysfwCommentDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.HysfwCommentEntity" id="hysfwCommentMap">
        <result property="id" column="id"/>
        <result property="imgs" column="imgs"/>
        <result property="content" column="content"/>
        <result property="orderid" column="orderid"/>
        <result property="uid" column="uid"/>
        <result property="menderid" column="menderid"/>
        <result property="createtime" column="createtime"/>
        <result property="score" column="score"/>
        <result property="anonymous" column="anonymous"/>
        <result property="servicescore" column="servicescore"/>
        <result property="productscore" column="productscore"/>
        <result property="type" column="type"/>
        <result property="replyname" column="replyname"/>
         <result property="replyphoto" column="replyphoto"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.HysfwCommentEntity">
		select * from t_hysfw_comment where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.HysfwCommentEntity">
		select c.id,c.orderid,c.uid,c.content,c.servicescore,c.score,c.productscore,c.createtime,c.imgs,c.anonymous,
		<if test="auth!=null and auth == 0"> 
		CASE c.anonymous WHEN 0 THEN IFNULL(u.realname,u.user_name)
		WHEN 1  THEN "无权查看"
		END user_name, 
		CASE c.anonymous WHEN 0 THEN u.mobile 
		WHEN 1  THEN "无权查看" 
		END mobile,
		CASE c.anonymous WHEN 0 THEN u.photo 
		WHEN 1  THEN "无权查看" 
		END  photo
		</if>
		<if test="auth!=null and auth == 1"> 
		IFNULL(u.realname,u.user_name) user_name, u.mobile, u.photo 
		</if>
		from t_hysfw_comment c
		left join t_user u on u.id = c.uid
		<where>
			<if test="ids!=null">c.id in 
				<foreach item="id" collection="ids" open="(" separator="," close=")">
					#{id}
				</foreach>
			</if>  <!-- CONCAT(u.user_name,u.nickname) like CONCAT("%",#{username},"%") -->
			<if test="username != null and username.trim()!=''">LOCATE(#{username}, CONCAT(u.user_name,u.realname)) > 0</if>
		</where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_hysfw_comment c
		left join t_user u on u.id = c.uid 
		<where>
			<if test="username != null and username.trim()!=''">u.user_name like CONCAT("%",#{username},"%")</if>
		</where>
	</select>
	<select id="queryCommentTotal" resultType="int">
        select  count(*)  from t_hysfw_comment  t 
		LEFT  JOIN  (select * from t_delivery_order o where o.ordertype=7) d 
		on t.orderid = d.orderid
		  LEFT JOIN  t_user u
		  ON t.uid = u.id
		  where 1=1
        <if test="uid != null">
            and t.menderid = #{uid}
        </if>
        <if test="scoretype == 1 ">
            and t.score &lt;2
        </if>
         <if test="scoretype == 2 ">
            and t.score between 2 and 4
        </if>
         <if test="scoretype == 3 ">
            and t.score &gt;=4
        </if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by t.id desc
            </otherwise>
        </choose>
    </select>
	 
	 
	<insert id="save" parameterType="com.lcworld.entity.HysfwCommentEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_hysfw_comment
		(
			`imgs`, 
			`content`, 
			`orderid`, 
			`uid`, 
			`menderid`, 
			`createtime`, 
			`score`, 
			`anonymous`, 
			`servicescore`,
			`productscore`,
			`type`
		)
		values
		(
			#{imgs}, 
			#{content}, 
			#{orderid}, 
			#{uid}, 
			#{menderid}, 
			#{createtime}, 
			#{score}, 
			#{anonymous}, 
			#{servicescore},
			#{productscore},
			#{type}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.HysfwCommentEntity">
		update t_hysfw_comment 
		<set>
			<if test="imgs != null">`imgs` = #{imgs}, </if>
			<if test="content != null">`content` = #{content}, </if>
			<if test="orderid != null">`orderid` = #{orderid}, </if>
			<if test="uid != null">`uid` = #{uid}, </if>
			<if test="menderid != null">`menderid` = #{menderid}, </if>
			<if test="createtime != null">`createtime` = #{createtime}, </if>
			<if test="score != null">`score` = #{score}, </if>
			<if test="anonymous != null">`anonymous` = #{anonymous}, </if>
			<if test="servicescore != null">`servicescore` = #{servicescore},</if>
			<if test="productscore != null">`productscore` = #{productscore}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_hysfw_comment where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_hysfw_comment where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	 <select id="queryListByScoretype" resultMap="hysfwCommentMap">
        select t.*,u.realname  as 'replyname',u.photo as 'replyphoto',d.did  from t_hysfw_comment  t 
		LEFT  JOIN  (select * from t_delivery_order o where o.ordertype=7) d 
		on t.orderid = d.orderid
		  LEFT JOIN  t_user u
		  ON t.uid = u.id
		  where 1=1
        <if test="uid != null">
            and t.menderid = #{uid}
        </if>
        <if test="scoretype == 1 ">
            and t.score &lt;2
        </if>
         <if test="scoretype == 2 ">
            and t.score between 2 and 4
        </if>
         <if test="scoretype == 3 ">
            and t.score &gt;=4
        </if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by t.id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>
</mapper>