<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.HysfwAppointmentDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.HysfwAppointmentEntity" id="hysfwAppointmentMap">
        <result property="id" column="id"/>
        <result property="orderid" column="orderid"/>
        <result property="date" column="date"/>
        <result property="intervalids" column="intervalids"/>
        <result property="status" column="status"/>
        <result property="roomid" column="roomid"/>
        <result property="uid" column="uid"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.HysfwAppointmentEntity">
		select * from t_hysfw_appointment where id = #{value}
	</select>
	<select id="findAvailableTime" resultType="com.lcworld.vo.HysfwAppointmentVo" parameterType="java.util.Map">
		SELECT
			uid,
			intervalids,
			u.realname realname,
			u.mobile mobile
		FROM
			t_hysfw_appointment a
		LEFT JOIN t_user u ON u.id = a.uid
		WHERE
			date = #{date}
		and a.`status` = 1
		and a.roomid = #{roomid}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.HysfwAppointmentEntity">
		select * from t_hysfw_appointment a
		<where>
			<if test="date != null">a.date = #{date}</if>
			<if test="status != null">AND a.`status` = #{status}</if>
			<if test="oid != null">AND a.`orderid` = #{oid}</if>
			<if test="uid != null">AND a.`uid` = #{uid}</if>
			<if test="roomid != null">AND a.`roomid` = #{roomid}</if>
			<if test="ids != null">
				<foreach item="id" collection="ids">
					and FIND_IN_SET(#{id},intervalids)
				</foreach>
			</if>
		</where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_hysfw_appointment 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.HysfwAppointmentEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_hysfw_appointment
		(
			`orderid`, 
			`date`, 
			`intervalids`, 
			`status`,
			`roomid`,
			`uid`
		)
		values
		(
			#{orderid}, 
			#{date}, 
			#{intervalids}, 
			#{status},
			#{roomid},
			#{uid}
		)
	</insert>
	<insert id="saveBatch" parameterType="com.lcworld.entity.HysfwAppointmentEntity">
		insert into t_hysfw_appointment
		(
			`orderid`, 
			`date`, 
			`intervalids`, 
			`status`,
			`roomid`,
			`uid`
		)
		values
		<foreach item="item" collection="list" separator=",">
		(
			#{item.orderid}, 
			#{item.date}, 
			#{item.intervalids}, 
			#{item.status},
			#{item.roomid},
			#{item.uid}
		)
		</foreach>
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.HysfwAppointmentEntity">
		update t_hysfw_appointment 
		<set>
			<if test="orderid != null">`orderid` = #{orderid}, </if>
			<if test="date != null">`date` = #{date}, </if>
			<if test="intervalids != null">`intervalids` = #{intervalids}, </if>
			<if test="status != null">`status` = #{status},</if>
			<if test="roomid != null">`roomid` = #{roomid},</if>
			<if test="uid != null">`uid` = #{uid}</if>
		</set>
		where id = #{id}
	</update>
	<update id="clearAppointment" parameterType="Integer">
		update t_hysfw_appointment 
		<set>
			status = 2
		</set>
		where `orderid` = #{id}
	</update>
	
	<delete id="delete">
		delete from t_hysfw_appointment where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_hysfw_appointment where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>