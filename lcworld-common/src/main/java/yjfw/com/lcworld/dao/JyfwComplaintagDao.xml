<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.JyfwComplaintagDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.JyfwComplaintagEntity" id="jyfwComplaintagMap">
        <result property="id" column="id"/>
        <result property="tagName" column="tag_name"/>
        <result property="createtime" column="createtime"/>
        <result property="count" column="count"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.JyfwComplaintagEntity">
		select * from t_jyfw_complaint_tag where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.JyfwComplaintagEntity">
		select * from t_jyfw_complaint_tag
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_jyfw_complaint_tag 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.JyfwComplaintagEntity">
		insert into t_jyfw_complaint_tag
		(
			`id`, 
			`tag_name`, 
			`createtime`, 
			`count`
		)
		values
		(
			#{id}, 
			#{tagName}, 
			#{createtime}, 
			#{count}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.JyfwComplaintagEntity">
		update t_jyfw_complaint_tag 
		<set>
			<if test="tagName != null">`tag_name` = #{tagName}, </if>
			<if test="createtime != null">`createtime` = #{createtime}, </if>
			<if test="count != null">`count` = #{count}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_jyfw_complaint_tag where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_jyfw_complaint_tag where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>