<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.TNoticeDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.TNoticeEntity" id="tNoticeMap">
        <result property="id" column="id"/>
        <result property="typeid" column="typeid"/>
        <result property="title" column="title"/>
        <result property="createtime" column="createtime"/>
        <result property="source" column="source"/>
        <result property="content" column="content"/>
        <result property="img" column="img"/>
        <result property="url" column="url"/>
        <result property="isRecommend" column="is_recommend"/>
        <result property="favorNum" column="favor_num"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.TNoticeEntity">
		select * from t_notice where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.TNoticeEntity">
		select n.*,(select name from t_notice_type t where t.id = n.typeid) typeName from t_notice n 
		<if test="favorstatus!=null">
        	LEFT JOIN t_favor f ON f.entityid = n.id 
        </if>
		<where>
			<if test="ids!=null">n.id in 
				<foreach item="id" collection="ids" open="(" separator="," close=")">
					#{id}
				</foreach>
			</if>
			<if test="typeid!=null">and n.typeid = #{typeid}</if>
			<if test="keyword!=null and keyword.trim()!=''">and n.title like concat('%',#{keyword},'%') or n.content like concat('%',#{keyword},'%') or n.source like concat('%',#{keyword},'%')</if>
			<if test="isRecommend!=null and isRecommend==1">and n.is_recommend = #{isRecommend}</if>
			<if test="createTimeStart!=null and createTimeStart.trim()!=''">AND n.createtime &gt;= #{createTimeStart}</if>
			<if test="createTimeEnd!=null and createTimeEnd.trim()!=''">AND n.createtime &lt;= #{createTimeEnd}</if>
			<if test="favorstatus != null and favortype != null and favoruid!=null">
	            AND f.favortype = #{favortype} AND f.uid = #{favoruid} AND f.`status` = #{favorstatus}
	        </if>
		</where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by n.createtime desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_notice n
		<where>
			<if test="typeid!=null">n.typeid = #{typeid}</if>
			<if test="keyword!=null and keyword.trim()!=''">and n.title like concat('%',#{keyword},'%') or n.content like concat('%',#{keyword},'%') or n.source like concat('%',#{keyword},'%')</if>
			<if test="isRecommend!=null and isRecommend==1">and n.is_recommend = #{isRecommend}</if>
			<if test="createTimeStart!=null and createTimeStart.trim()!=''">AND n.createtime &gt;= #{createTimeStart}</if>
			<if test="createTimeEnd!=null and createTimeEnd.trim()!=''">AND n.createtime &lt;= #{createTimeEnd}</if>
		</where>
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.TNoticeEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_notice
		(
			`typeid`, 
			`title`, 
			`createtime`, 
			`source`, 
			`content`, 
			`img`, 
			`url`,
			`is_recommend`,
			`favor_num`
		)
		values
		(
			#{typeid}, 
			#{title}, 
			#{createtime}, 
			#{source}, 
			#{content}, 
			#{img}, 
			#{url},
			#{isRecommend},
			#{favorNum}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.TNoticeEntity">
		update t_notice 
		<set>
			<if test="typeid != null">`typeid` = #{typeid}, </if>
			<if test="title != null">`title` = #{title}, </if>
			<if test="createtime != null">`createtime` = #{createtime}, </if>
			<if test="source != null">`source` = #{source}, </if>
			<if test="content != null">`content` = #{content}, </if>
			<if test="img != null">`img` = #{img}, </if>
			<if test="url != null">`url` = #{url},</if>
			<if test="isRecommend != null">`is_recommend` = #{isRecommend},</if>
			<if test="favorNum != null">`favor_num` = #{favorNum}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_notice where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_notice where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>