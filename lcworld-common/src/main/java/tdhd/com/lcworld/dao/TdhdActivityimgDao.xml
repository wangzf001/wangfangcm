<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.TdhdActivityimgDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.TdhdActivityimgEntity" id="tdhdActivityimgMap">
        <result property="aiId" column="ai_id"/>
        <result property="aId" column="a_id"/>
        <result property="aiImgPath" column="ai_img_path"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.TdhdActivityimgEntity">
		select * from t_tdhd_activityimg where ai_id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.TdhdActivityimgEntity">
		select * from t_tdhd_activityimg
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by ai_id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_tdhd_activityimg 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.TdhdActivityimgEntity">
		insert into t_tdhd_activityimg
		(
			`ai_id`, 
			`a_id`, 
			`ai_img_path`
		)
		values
		(
			#{aiId}, 
			#{aId}, 
			#{aiImgPath}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.TdhdActivityimgEntity">
		update t_tdhd_activityimg 
		<set>
			<if test="aId != null">`a_id` = #{aId}, </if>
			<if test="aiImgPath != null">`ai_img_path` = #{aiImgPath}</if>
		</set>
		where ai_id = #{aiId}
	</update>
	
	<delete id="delete">
		delete from t_tdhd_activityimg where ai_id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_tdhd_activityimg where ai_id in 
		<foreach item="aiId" collection="array" open="(" separator="," close=")">
			#{aiId}
		</foreach>
	</delete>

</mapper>