<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.TdhdActivityDemandDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.TdhdActivityDemandEntity" id="tdhdActivityDemandMap">
        <result property="id" column="id"/>
        <result property="activiyId" column="activiy_id"/>
        <result property="age" column="age"/>
        <result property="sex" column="sex"/>
        <result property="mobile" column="mobile"/>
        <result property="username" column="username"/>
        <result property="nation" column="nation"/>
        <result property="depart" column="depart"/>
        <result property="office" column="office"/>
        <result property="position" column="position"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.TdhdActivityDemandEntity">
		select * from t_tdhd_activity_demand where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.TdhdActivityDemandEntity">
		select * from t_tdhd_activity_demand
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_tdhd_activity_demand
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.TdhdActivityDemandEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_tdhd_activity_demand
		(
			`activiy_id`, 
			`age`, 
			`sex`, 
			`mobile`, 
			`username`, 
			`nation`, 
			`depart`, 
			`office`, 
			`position`
		)
		values
		(
			#{activiyId}, 
			#{age}, 
			#{sex}, 
			#{mobile}, 
			#{username}, 
			#{nation}, 
			#{depart}, 
			#{office}, 
			#{position}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.TdhdActivityDemandEntity">
		update t_tdhd_activity_demand
		<set>
			<if test="activiyId != null">`activiy_id` = #{activiyId}, </if>
			<if test="age != null">`age` = #{age}, </if>
			<if test="sex != null">`sex` = #{sex}, </if>
			<if test="mobile != null">`mobile` = #{mobile}, </if>
			<if test="username != null">`username` = #{username}, </if>
			<if test="nation != null">`nation` = #{nation}, </if>
			<if test="depart != null">`depart` = #{depart}, </if>
			<if test="office != null">`office` = #{office}, </if>
			<if test="position != null">`position` = #{position}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_tdhd_activity_demand where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_tdhd_activity_demand where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>