<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.TbMessageOrderMenderDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.TbMessageOrderMenderEntity" id="tbMessageOrderMenderMap">
        <result property="autoId" column="auto_id"/>
        <result property="messageTitle" column="message_title"/>
        <result property="messageContent" column="message_content"/>
        <result property="createTime" column="create_time"/>
        <result property="uid" column="uid"/>
        <result property="serverTypeId" column="server_type_id"/>
        <result property="orderId" column="order_id"/>
        <result property="isRead" column="is_read"/>
        <result property="isDelete" column="is_delete"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.TbMessageOrderMenderEntity">
		select * from tb_message_order_mender where auto_id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.TbMessageOrderMenderEntity">
		select * from tb_message_order_mender
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by auto_id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from tb_message_order_mender 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.TbMessageOrderMenderEntity" useGeneratedKeys="true" keyProperty="autoId">
		insert into tb_message_order_mender
		(
			`message_title`, 
			`message_content`, 
			`create_time`, 
			`uid`, 
			`server_type_id`, 
			`order_id`, 
			`is_read`, 
			`is_delete`
		)
		values
		(
			#{messageTitle}, 
			#{messageContent}, 
			#{createTime}, 
			#{uid}, 
			#{serverTypeId}, 
			#{orderId}, 
			#{isRead}, 
			#{isDelete}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.TbMessageOrderMenderEntity">
		update tb_message_order_mender 
		<set>
			<if test="messageTitle != null">`message_title` = #{messageTitle}, </if>
			<if test="messageContent != null">`message_content` = #{messageContent}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="uid != null">`uid` = #{uid}, </if>
			<if test="serverTypeId != null">`server_type_id` = #{serverTypeId}, </if>
			<if test="orderId != null">`order_id` = #{orderId}, </if>
			<if test="isRead != null">`is_read` = #{isRead}, </if>
			<if test="isDelete != null">`is_delete` = #{isDelete}</if>
		</set>
		where auto_id = #{autoId}
	</update>
	
	<delete id="delete">
		delete from tb_message_order_mender where auto_id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from tb_message_order_mender where auto_id in 
		<foreach item="autoId" collection="array" open="(" separator="," close=")">
			#{autoId}
		</foreach>
	</delete>

	<select id="queryListByInfo" resultType="com.lcworld.entity.TbMessageOrderMenderEntity">
		select * from tb_message_order_mender
		<where>
			<if test="uid != null"> and uid = #{uid}</if>
			<if test="serverTypeId != null"> and server_type_id = #{serverTypeId}</if>
		</where>
		order by create_time desc
		limit #{index}, #{limit}
	</select>
	
	<select id="unReadMessageCount" resultType="int">
		select count(*) from tb_message_order_mender
		<where>
		<if test="uid != null"> and uid = #{uid}</if>
		<if test="serverTypeId != null"> and server_type_id = #{serverTypeId}</if>
		and is_read = 0
		</where> 
	</select>
</mapper>