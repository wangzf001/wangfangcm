<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.IndexCarouselDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.IndexCarouselEntity" id="indexCarouselMap">
        <result property="id" column="id"/>
        <result property="imgs" column="imgs"/>
        <result property="sort" column="sort"/>
        <result property="url" column="url"/>
        <result property="time" column="time"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.IndexCarouselEntity">
		select * from t_index_carousel where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.IndexCarouselEntity">
		select * from t_index_carousel
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by sort
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_index_carousel 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.IndexCarouselEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_index_carousel
		(
			`imgs`, 
			`sort`, 
			`url`, 
			`time`
		)
		values
		(
			#{imgs}, 
			#{sort}, 
			#{url}, 
			#{time}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.IndexCarouselEntity">
		update t_index_carousel 
		<set>
			<if test="imgs != null">`imgs` = #{imgs}, </if>
			<if test="sort != null">`sort` = #{sort}, </if>
			<if test="url != null">`url` = #{url}, </if>
			<if test="time != null">`time` = #{time}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_index_carousel where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_index_carousel where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>