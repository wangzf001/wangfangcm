<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.PurchaseTypeDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.PurchaseTypeEntity" id="purchaseTypeMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="servicecode" column="servicecode"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.PurchaseTypeEntity">
		select * from t_purchase_type where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.PurchaseTypeEntity">
		select * from t_purchase_type where 1=1
		<if test="servicecode != null and servicecode != ''">
		  and servicecode=#{servicecode}
		</if>
		<if test="servicecodelist != null and servicecodelist.size > 0">
		  and servicecode in 
		  <foreach item="id" collection="servicecodelist" open="(" separator="," close=")">
            #{id}
            </foreach>
		</if>
		
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_purchase_type where 1=1
		<if test="servicecode != null and servicecode != ''">
          and servicecode=#{servicecode}
        </if>
        <if test="servicecodelist != null and servicecodelist.size > 0">
          and servicecode in 
          <foreach item="id" collection="servicecodelist" open="(" separator="," close=")">
            #{id}
            </foreach>
        </if>
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.PurchaseTypeEntity">
		insert into t_purchase_type
		(
			`id`, 
			`name`, 
			`servicecode`
		)
		values
		(
			#{id}, 
			#{name}, 
			#{servicecode}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.PurchaseTypeEntity">
		update t_purchase_type 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="servicecode != null">`servicecode` = #{servicecode}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_purchase_type where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_purchase_type where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
		<select id="queryAllSysRolesByUid" resultType="com.lcworld.entity.PurchaseTypeEntity">
			SELECT
				distinct c.servicecode,c.name
			FROM
				sys_user_role a
			INNER JOIN sys_role b ON a.role_id = b.role_id
			INNER JOIN t_purchase_type c ON c.servicecode = b.roletype
			WHERE 1=1 and b.roletype is not null 
			<if test="uid != null and uid != 1">
				and a.user_id = #{uid}
			</if>
			<if test="uid == null ">
				and 1=2
			</if>
				
		<if test="servicecode != null and servicecode > 0">
			and c.servicecode =#{servicecode}
		</if>
		  order by c.id desc
      
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
		<select id="queryAllSysRoles" resultType="com.lcworld.entity.PurchaseTypeEntity">
			select * from t_purchase_type 
			WHERE 1=1
		  order by id desc
      
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>

</mapper>