<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.PayinfoDao">
 
	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.PayinfoEntity" id="payinfoMap">
        <result property="id" column="id"/>
        <result property="uid" column="uid"/>
        <result property="orderid" column="orderid"/>
        <result property="paytype" column="paytype"/>
        <result property="ordertype" column="ordertype"/>
        <result property="status" column="status"/>
        <result property="paymoney" column="paymoney"/>
        <result property="ordercode" column="ordercode"/>
        <result property="transactionId" column="transaction_id"/>
        <result property="createtime" column="createtime"/>
        <result property="paytime" column="paytime"/>
        <result property="vouchercount" column="vouchercount"/>
        <result property="voucherprice" column="voucherprice"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.PayinfoEntity">
		select * from t_payinfo where id = #{value}
	</select>
	<select id="queryList" resultType="com.lcworld.entity.PayinfoEntity">
		select * from t_payinfo where 1=1 
		<if test="orderCode != null and orderCode != ''">
		  and ordercode = #{orderCode}
		</if>
		<if test="paytype != null and paytype != ''">
		  and paytype = #{paytype}
		</if>
		<if test="uid!=null">and uid = #{uid}</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_payinfo 
		<where>
			<if test="orderCode != null and orderCode != ''">
			  and ordercode = #{orderCode}
			</if>
			<if test="paytype != null and paytype != ''">
			  and paytype = #{paytype}
			</if>
			<if test="uid!=null">and uid = #{uid}</if>
		</where>
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.PayinfoEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_payinfo
		(
			`uid`, 
			`orderid`, 
			`paytype`, 
			`ordertype`, 
			`status`, 
			`paymoney`, 
			`ordercode`, 
			`transaction_id`, 
			`createtime`, 
			`paytime`, 
			`vouchercount`, 
			`voucherprice`
		)
		values
		(
			#{uid}, 
			#{orderid}, 
			#{paytype}, 
			#{ordertype}, 
			#{status}, 
			#{paymoney}, 
			#{ordercode}, 
			#{transactionId}, 
			#{createtime}, 
			#{paytime}, 
			#{vouchercount}, 
			#{voucherprice}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.PayinfoEntity">
		update t_payinfo 
		<set>
			<if test="uid != null">`uid` = #{uid}, </if>
			<if test="orderid != null">`orderid` = #{orderid}, </if>
			<if test="paytype != null">`paytype` = #{paytype}, </if>
			<if test="ordertype != null">`ordertype` = #{ordertype}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="paymoney != null">`paymoney` = #{paymoney}, </if>
			<if test="ordercode != null">`ordercode` = #{ordercode}, </if>
			<if test="transactionId != null">`transaction_id` = #{transactionId}, </if>
			<if test="createtime != null">`createtime` = #{createtime}, </if>
			<if test="paytime != null">`paytime` = #{paytime}, </if>
			<if test="vouchercount != null">`vouchercount` = #{vouchercount}, </if>
			<if test="voucherprice != null">`voucherprice` = #{voucherprice}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_payinfo where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_payinfo where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>