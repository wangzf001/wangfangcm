<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.lcworld.dao.PurchaseAccountDao">
    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.PurchaseAccountEntity" id="purchaseAccountMap">
        <result property="id" column="id"/>
        <result property="remain" column="remain"/>
        <result property="createtime" column="createtime"/>
        <result property="paypass" column="paypass"/>
        <result property="typeid" column="typeid"/>
        <result property="total" column="total"/>
    </resultMap>

    <select id="queryObject" resultType="com.lcworld.entity.PurchaseAccountEntity">
        select * from t_purchase_account where id = #{value}
    </select>

    <select id="queryList" resultType="com.lcworld.entity.PurchaseAccountEntity">
        select * from t_purchase_account
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>
    
    <select id="queryTotal" resultType="int">
        select count(*) from t_purchase_account 
    </select>
     
    <insert id="save" parameterType="com.lcworld.entity.PurchaseAccountEntity" useGeneratedKeys="true" keyProperty="id">
        insert into t_purchase_account
        (
            `remain`, 
            `createtime`, 
            `paypass`,
            `typeid`,
            `total`
        )
        values
        (
            #{remain}, 
            #{createtime}, 
            #{paypass},
            #{typeid},
            #{total}
        )
    </insert>
     
    <update id="update" parameterType="com.lcworld.entity.PurchaseAccountEntity">
        update t_purchase_account 
        <set>
            <if test="remain != null">`remain` = #{remain}, </if>
            <if test="createtime != null">`createtime` = #{createtime}, </if>
            <if test="paypass != null">`paypass` = #{paypass},</if>
            <if test="typeid != null">`typeid` = #{typeid},</if>
            <if test="total != null">`total` = #{total}</if>
        </set>
        where id = #{id}
    </update>
    
    <delete id="delete">
        delete from t_purchase_account where id = #{value}
    </delete>
    
    <delete id="deleteBatch">
        delete from t_purchase_account where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
	

	<select id="queryGroupAcount" resultType="com.lcworld.entity.PurchaseAccountEntity">
		  SELECT
            M.*
        FROM
            t_user a
        INNER JOIN t_depart b ON a.departid = b.id
        INNER JOIN t_depart_purchase_count f ON f.departid = b.id
        INNER JOIN (
            SELECT
                d.*
            FROM
                t_purchase_account d
            INNER JOIN t_purchase_type e ON d.typeid = e.id
            AND e.servicecode = #{servicecode}
        ) M ON M.id = f.purchaseid
        where a.id=#{uid}
    </select>

</mapper>