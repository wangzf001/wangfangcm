<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.YlfwYyghDoctorScheduleDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.YlfwYyghDoctorScheduleEntity" id="ylfwYyghDoctorScheduleMap">
        <result property="id" column="id"/>
        <result property="doctorid" column="doctorid"/>
        <result property="createtime" column="createtime"/>
        <result property="consultperiodid" column="consultperiodid"/>
        <result property="scheduledate" column="scheduledate"/>
        <result property="status" column="status"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.YlfwYyghDoctorScheduleEntity">
		select * from t_ylfw_yygh_doctor_schedule where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.YlfwYyghDoctorScheduleEntity">
		select * from t_ylfw_yygh_doctor_schedule
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_ylfw_yygh_doctor_schedule 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.YlfwYyghDoctorScheduleEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_ylfw_yygh_doctor_schedule
		(
			`doctorid`, 
			`createtime`, 
			`consultperiodid`, 
			`scheduledate`, 
			`status`
		)
		values
		(
			#{doctorid}, 
			#{createtime}, 
			#{consultperiodid}, 
			#{scheduledate}, 
			#{status}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.YlfwYyghDoctorScheduleEntity">
		update t_ylfw_yygh_doctor_schedule 
		<set>
			<if test="doctorid != null">`doctorid` = #{doctorid}, </if>
			<if test="createtime != null">`createtime` = #{createtime}, </if>
			<if test="consultperiodid != null">`consultperiodid` = #{consultperiodid}, </if>
			<if test="scheduledate != null">`scheduledate` = #{scheduledate}, </if>
			<if test="status != null">`status` = #{status}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_ylfw_yygh_doctor_schedule where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_ylfw_yygh_doctor_schedule where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	<select id="queryDocSchedules" resultType="com.lcworld.dto.DoctorScheduleDTO">
        SELECT
		    b.starttime,
		    b.endtime,
		    b.id,
		
		IF (
		    a.`status` = 0
		    OR a.`status` IS NULL,
		    0,
		    1
		) status,
		b.periodtype
		FROM
		    t_ylfw_yygh_doctor_schedule a
		LEFT JOIN t_ylfw_yygh_period b ON a.consultperiodid = b.id
		WHERE
		    a.doctorid = #{doctorid}
    </select>

</mapper>