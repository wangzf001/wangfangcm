<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.YlfwYyghDoctorSkilledDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.YlfwYyghDoctorSkilledEntity" id="ylfwYyghDoctorSkilledMap">
        <result property="id" column="id"/>
        <result property="doctorid" column="doctorid"/>
        <result property="diseaseid" column="diseaseid"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.YlfwYyghDoctorSkilledEntity">
		select * from t_ylfw_yygh_doctor_skilled where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.YlfwYyghDoctorSkilledEntity">
		select * from t_ylfw_yygh_doctor_skilled
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_ylfw_yygh_doctor_skilled 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.YlfwYyghDoctorSkilledEntity">
		insert into t_ylfw_yygh_doctor_skilled
		(
			`id`, 
			`doctorid`, 
			`diseaseid`
		)
		values
		(
			#{id}, 
			#{doctorid}, 
			#{diseaseid}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.YlfwYyghDoctorSkilledEntity">
		update t_ylfw_yygh_doctor_skilled 
		<set>
			<if test="doctorid != null">`doctorid` = #{doctorid}, </if>
			<if test="diseaseid != null">`diseaseid` = #{diseaseid}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_ylfw_yygh_doctor_skilled where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_ylfw_yygh_doctor_skilled where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>