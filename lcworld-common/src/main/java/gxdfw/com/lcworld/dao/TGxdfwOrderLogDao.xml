<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.TGxdfwOrderLogDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.TGxdfwOrderLogEntity" id="tGxdfwOrderLogMap">
        <result property="id" column="id"/>
        <result property="status" column="status"/>
        <result property="createtime" column="createtime"/>
        <result property="orderid" column="orderid"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.TGxdfwOrderLogEntity">
		select * from t_gxdfw_order_log where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.TGxdfwOrderLogEntity">
		select * from t_gxdfw_order_log ol
		<where>
			<if test="oid!=null">ol.orderid = #{oid}</if>
		</where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_gxdfw_order_log ol
		<where>
			<if test="oid!=null">ol.orderid = #{oid}</if>
		</where>
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.TGxdfwOrderLogEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_gxdfw_order_log
		(
			`status`, 
			`createtime`, 
			`orderid`
		)
		values
		(
			#{status}, 
			#{createtime}, 
			#{orderid}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.TGxdfwOrderLogEntity">
		update t_gxdfw_order_log 
		<set>
			<if test="status != null">`status` = #{status}, </if>
			<if test="createtime != null">`createtime` = #{createtime}, </if>
			<if test="orderid != null">`orderid` = #{orderid}</if>
		</set>
		<where>
			<if test="id!=null">id = #{id}</if>
			<if test="id==null and orderid!=null">`orderid` = #{orderid}</if>
		</where>
	</update>
	
	<delete id="delete">
		delete from t_gxdfw_order_log where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_gxdfw_order_log where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>