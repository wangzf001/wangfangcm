        <result property="expectarrivaltime" column="expectarrivaltime"/>
        <result property="code" column="code"/>
        <result property="createtime" column="createtime"/>
        <result property="status" column="status"/>
        <result property="totalprice" column="totalprice"/>
        <result property="payStatus" column="pay_status"/>
        <result property="cancelReasonids" column="cancel_reasonids"/>
        <result property="reasonContent" column="reason_content"/>
        <result property="payType" column="pay_type"/>
        <result property="logStatus" column="logStatus"/>
        <result property="nickname" column="nickname"/>
        <result property="photo" column="photo"/>
        <result property="isevaluated" column="isevaluated"/>
        <result property="checkstatus" column="checkstatus"/>
        <result property="checkstatus1" column="checkstatus1"/>
        
