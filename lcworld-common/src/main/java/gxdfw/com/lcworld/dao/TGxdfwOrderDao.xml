    <select id="queryObject" resultType="com.lcworld.entity.TGxdfwOrderEntity">
		select * from t_gxdfw_order where id = #{value}
	</select>

    <select id="queryList" resultMap="tGxdfwOrderMap">
        SELECT
        o.*,IFNULL(o.checkstatus,0) checkstatus1
        <!-- <if test="webQuery == null">
            ,od.id odid,od.totalPrice odTotal,
            (
            SELECT
            ct.`name`
            FROM
            t_gxdfw_clothestype ct
            WHERE
            od.clothestypeid = ct.id
            ) clothName
        </if> -->
        ,(SELECT `status` FROM t_gxdfw_order_log WHERE orderid = o.id) logStatus
        ,ifnull(u.realname,o.mobile) nickname
        <if test="serviceQuery != null and serviceQuery == 1">
            ,u.photo photo
        </if>
        FROM
        t_gxdfw_order o
        <!-- <if test="webQuery == null">
            LEFT JOIN t_gxdfw_orderdetail od ON o.id = od.orderid
        </if> -->
        LEFT JOIN t_user u ON u.id = o.uid
        <!--<if test="serviceQuery != null and serviceQuery == 1">
            LEFT JOIN t_user u ON u.id = o.uid
        </if>-->
        <where>
            <if test="uid!=null">o.uid = #{uid}</if>
            <if test="orderStatus!=null">AND o.status = #{orderStatus}</if>
            <if test="finishStatus!=null">AND o.status in (3,4)</if>
            <if test="oid!=null">AND o.id = #{oid}</if>
            <if test="ordercode!=null and ordercode.trim()!=''">AND o.code like concat("%",#{ordercode},"%")</if>
            <if test="payordercode!=null and payordercode.trim()!=''">AND o.code =#{payordercode}</if>
            <if test="realname!=null and realname.trim()!=''">AND o.realname like concat("%",#{realname},"%")</if>
            <if test="mobile!=null and mobile.trim()!=''">AND o.mobile like concat("%",#{mobile},"%")</if>
            <if test="payStatus!=null">AND o.pay_status = #{payStatus}</if>
            <if test="createTimeStart!=null and createTimeStart.trim()!=''">AND o.createtime &gt;= #{createTimeStart}
            </if>
            <if test="createTimeEnd!=null and createTimeEnd.trim()!=''">AND o.createtime &lt;= #{createTimeEnd}</if>
        </where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by o.id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
        select count(*) from t_gxdfw_order o
        <where>
            <if test="uid!=null">o.uid = #{uid}</if>
            <if test="orderStatus!=null">AND o.status = #{orderStatus}</if>
            <if test="oid!=null">AND o.id = #{oid}</if>
            <if test="ordercode!=null and ordercode.trim()!=''">AND o.code like concat("%",#{ordercode},"%")</if>
            <if test="realname!=null and realname.trim()!=''">AND o.realname like concat("%",#{realname},"%")</if>
            <if test="mobile!=null and mobile.trim()!=''">AND o.mobile like concat("%",#{mobile},"%")</if>
            <if test="payStatus!=null">AND o.pay_status = #{payStatus}</if>
            <if test="createTimeStart!=null and createTimeStart.trim()!=''">AND o.createtime &gt;= #{createTimeStart}
            </if>
            <if test="createTimeEnd!=null and createTimeEnd.trim()!=''">AND o.createtime &lt;= #{createTimeEnd}</if>
        </where>
    </select>

    <insert id="save" parameterType="com.lcworld.entity.TGxdfwOrderEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_gxdfw_order
		(
			`uid`, 
			`mobile`, 
			`expectarrivaltime`, 
			`code`, 
			`createtime`, 
			`status`, 
			`totalprice`,
			`pay_status`,
			`cancel_reasonids`,
			`reason_content`,
			`pay_type`,
			`isevaluated`,
			`checkstatus`
		)
		values
		(
			#{uid}, 
			#{mobile}, 
			#{expectarrivaltime}, 
			#{code}, 
			#{createtime}, 
			#{status}, 
			#{totalprice},
			#{payStatus},
			#{cancelReasonids},
			#{reasonContent},
			#{payType},
			#{isevaluated},
			#{checkstatus}
		)
	</insert>

    <update id="update" parameterType="com.lcworld.entity.TGxdfwOrderEntity">
        update t_gxdfw_order
        <set>
            <if test="uid != null">`uid` = #{uid},</if>
            <if test="mobile != null">`mobile` = #{mobile},</if>
            <if test="expectarrivaltime != null">`expectarrivaltime` = #{expectarrivaltime},</if>
            <if test="code != null">`code` = #{code},</if>
            <if test="createtime != null">`createtime` = #{createtime},</if>
            <if test="status != null">`status` = #{status},</if>
            <if test="totalprice != null">`totalprice` = #{totalprice},</if>
            <if test="payStatus != null">`pay_status` = #{payStatus},</if>
            <if test="cancelReasonids != null">`cancel_reasonids` = #{cancelReasonids},</if>
            <if test="reasonContent != null">`reason_content` = #{reasonContent},</if>
            <if test="payType != null">`pay_type` = #{payType},</if>
            <if test="isevaluated != null">`isevaluated` = #{isevaluated},</if>
            <if test="checkstatus != null">`checkstatus` = #{checkstatus}</if>
        </set>
        where id = #{id}
    </update>
    <update id="invalidOrderBatch" parameterType="java.util.Map">
        update t_gxdfw_order
        <set>
            <if test="orderStatus != null">`status` = #{orderStatus}</if>
        </set>
        where id in
        <foreach item="id" collection="ids" open="(" separator="," close=")">
            #{id}
        </foreach>
        and `status` = #{orderStatusFormer}
    </update>
    <delete id="delete">
		delete from t_gxdfw_order where id = #{value}
	</delete>

    <delete id="deleteBatch">
        delete from t_gxdfw_order where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>