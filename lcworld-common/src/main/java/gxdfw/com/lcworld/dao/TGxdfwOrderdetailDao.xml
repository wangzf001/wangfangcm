<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.TGxdfwOrderdetailDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.TGxdfwOrderdetailEntity" id="tGxdfwOrderdetailMap">
        <result property="id" column="id"/>
        <result property="orderid" column="orderid"/>
        <result property="clothestypeid" column="clothestypeid"/>
        <result property="count" column="count"/>
        <result property="price" column="price"/>
        <result property="totalprice" column="totalprice"/>
        <result property="createtime" column="createtime"/>
        <result property="remark" column="remark"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.TGxdfwOrderdetailEntity">
		select * from t_gxdfw_orderdetail where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.TGxdfwOrderdetailEntity">
		SELECT
			od.*, (
				SELECT
					ct.`name`
				FROM
					t_gxdfw_clothestype ct
				WHERE
					od.clothestypeid = ct.id
			) clothName
		FROM
			t_gxdfw_orderdetail od
		<where>
			<if test="idArr!=null">
				od.id in
				<foreach item="id" collection="idArr" open="(" separator="," close=")">
					#{id}
				</foreach>
			</if>
			<if test="oid!=null">and od.orderid = #{oid}</if>
			<if test="orderid !=null">and od.orderid = #{orderid}</if>
		</where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_gxdfw_orderdetail od
		<where>
			<if test="oid!=null">od.orderid = #{oid}</if>
			<if test="orderid !=null">od.orderid = #{orderid}</if>
		</where>
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.TGxdfwOrderdetailEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_gxdfw_orderdetail
		(
			`orderid`, 
			`clothestypeid`, 
			`count`, 
			`price`, 
			`totalprice`, 
			`createtime`,
			`remark`
			
		)
		values
		(
			#{orderid}, 
			#{clothestypeid}, 
			#{count}, 
			#{price}, 
			#{totalprice}, 
			#{createtime},
			#{remark}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.TGxdfwOrderdetailEntity">
		update t_gxdfw_orderdetail 
		<set>
			<if test="orderid != null">`orderid` = #{orderid}, </if>
			<if test="clothestypeid != null">`clothestypeid` = #{clothestypeid}, </if>
			<if test="count != null">`count` = #{count}, </if>
			<if test="price != null">`price` = #{price}, </if>
			<if test="totalprice != null">`totalprice` = #{totalprice}, </if>
			<if test="createtime != null">`createtime` = #{createtime},</if>
			<if test="remark != null">`remark` = #{remark}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_gxdfw_orderdetail where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_gxdfw_orderdetail where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	<insert id="saveBatch" parameterType="com.lcworld.entity.TGxdfwOrderdetailEntity" useGeneratedKeys="true" keyProperty="id">
        insert into t_gxdfw_orderdetail
        (
            `orderid`, 
            `clothestypeid`, 
            `count`, 
            `price`, 
            `totalprice`, 
            `createtime`,
            `remark`
            
        )
        values
          <foreach collection="list" item="item" index="index"
            separator=",">
            (
            #{item.orderid}, 
            #{item.clothestypeid}, 
            #{item.count}, 
            #{item.price}, 
            #{item.totalprice}, 
            #{item.createtime},
            #{item.remark}
        )
        </foreach>
       
    </insert>
    
    <select id="selectDetailByOrderId" resultType="com.lcworld.entity.TGxdfwOrderdetailEntity">
		SELECT
			t.*, ct.`name` clothName
		FROM
			`t_gxdfw_orderdetail` t
		JOIN t_gxdfw_clothestype ct ON t.clothestypeid = ct.id
		WHERE
			orderid = #{id}
    </select>

</mapper>