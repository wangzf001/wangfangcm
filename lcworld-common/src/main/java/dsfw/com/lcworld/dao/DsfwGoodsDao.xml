<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.DsfwGoodsDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.DsfwGoodsEntity" id="dsfwGoodsMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="price" column="price"/>
        <result property="img" column="img"/>
        <result property="createtime" column="createtime"/>
        <result property="cid" column="cid"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.DsfwGoodsEntity">
		select * from t_dsfw_goods where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.DsfwGoodsEntity">
		select g.*,(SELECT c.skucataname FROM t_dsfw_category c WHERE c.id = g.cid) cname from t_dsfw_goods g
		<where>
			<if test="ids!=null">g.id in 
				<foreach item="id" collection="ids" open="(" separator="," close=")">
					#{id}
				</foreach>
			</if>
			<if test="categoryId!=null">g.cid = #{categoryId}</if>
			<if test="keyword != null and keyword.trim()!=''">
				g.name LIKE CONCAT('%',#{keyword},'%')
			</if>
			<if test="createTimeStart!=null and createTimeStart.trim()!=''">AND g.createtime &gt;= #{createTimeStart}</if>
			<if test="createTimeEnd!=null and createTimeEnd.trim()!=''">AND g.createtime &lt;= #{createTimeEnd}</if>
		</where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_dsfw_goods g
		<where>
			<if test="categoryId!=null">g.cid = #{categoryId}</if>
			<if test="keyword != null and keyword.trim()!=''">
				g.name LIKE CONCAT('%',#{keyword},'%')
			</if>
			<if test="createTimeStart!=null and createTimeStart.trim()!=''">AND g.createtime &gt;= #{createTimeStart}</if>
			<if test="createTimeEnd!=null and createTimeEnd.trim()!=''">AND g.createtime &lt;= #{createTimeEnd}</if>
		</where>
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.DsfwGoodsEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_dsfw_goods
		(
			`name`, 
			`price`, 
			`img`, 
			`createtime`, 
			`cid`
		)
		values
		(
			#{name}, 
			#{price}, 
			#{img}, 
			#{createtime}, 
			#{cid}
		)
	</insert>
	<insert id="saveBatch" parameterType="java.util.List">
       insert into t_dsfw_goods
		(
			`name`, 
			`price`, 
			`img`, 
			`createtime`, 
			`cid`
		)
		values
        <foreach collection="list" item="item" index="index" separator=",">
       	(
			#{item.name}, 
			#{item.price}, 
			#{item.img}, 
			#{item.createtime}, 
			#{item.cid}
		)
        </foreach>
    </insert>
	 
	<update id="update" parameterType="com.lcworld.entity.DsfwGoodsEntity">
		update t_dsfw_goods 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="price != null">`price` = #{price}, </if>
			<if test="img != null">`img` = #{img}, </if>
			<if test="createtime != null">`createtime` = #{createtime}, </if>
			<if test="cid != null">`cid` = #{cid}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_dsfw_goods where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_dsfw_goods where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>