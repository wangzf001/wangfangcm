<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.DsfwOrderdetailDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.DsfwOrderdetailEntity" id="dsfwOrderdetailMap">
        <result property="id" column="id"/>
        <result property="orderid" column="orderid"/>
        <result property="goodsid" column="goodsid"/>
        <result property="count" column="count"/>
        <result property="price" column="price"/>
        <result property="createtime" column="createtime"/>
        <result property="totalprice" column="totalprice"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.DsfwOrderdetailEntity">
		select * from t_dsfw_orderdetail where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.DsfwOrderdetailEntity">
		select od.*,g.name goodsName,g.img goodsImg from t_dsfw_orderdetail od
		left join t_dsfw_goods g on od.goodsid = g.id
		<where>
			<if test="oid!=null">od.orderid = #{oid}</if>
		</where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_dsfw_orderdetail 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.DsfwOrderdetailEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_dsfw_orderdetail
		(
			`orderid`, 
			`goodsid`, 
			`count`, 
			`price`, 
			`createtime`, 
			`totalprice`
		)
		values
		(
			#{orderid}, 
			#{goodsid}, 
			#{count}, 
			#{price}, 
			#{createtime}, 
			#{totalprice}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.DsfwOrderdetailEntity">
		update t_dsfw_orderdetail 
		<set>
			<if test="orderid != null">`orderid` = #{orderid}, </if>
			<if test="goodsid != null">`goodsid` = #{goodsid}, </if>
			<if test="count != null">`count` = #{count}, </if>
			<if test="price != null">`price` = #{price}, </if>
			<if test="createtime != null">`createtime` = #{createtime}, </if>
			<if test="totalprice != null">`totalprice` = #{totalprice}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_dsfw_orderdetail where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_dsfw_orderdetail where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>