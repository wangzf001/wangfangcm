<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.TBxwxItemDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.TBxwxItemEntity" id="tBxwxItemMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="pricehighlimit" column="pricehighlimit"/>
        <result property="pricelowlimit" column="pricelowlimit"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.TBxwxItemEntity">
		select * from t_bxwx_item where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.TBxwxItemEntity">
		select * from t_bxwx_item
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_bxwx_item 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.TBxwxItemEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_bxwx_item
		(
			`name`, 
			`pricehighlimit`, 
			`pricelowlimit`
		)
		values
		(
			#{name}, 
			#{pricehighlimit}, 
			#{pricelowlimit}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.TBxwxItemEntity">
		update t_bxwx_item 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="pricehighlimit != null">`pricehighlimit` = #{pricehighlimit}, </if>
			<if test="pricelowlimit != null">`pricelowlimit` = #{pricelowlimit}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_bxwx_item where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_bxwx_item where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	<select id="queryItemList" resultType="com.lcworld.dto.BxwxMenderItemDTO">
        select * from t_bxwx_item
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

</mapper>