<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.BxwxAppointmentDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.BxwxAppointmentEntity" id="bxwxAppointmentMap">
        <result property="id" column="id"/>
        <result property="orderid" column="orderid"/>
        <result property="date" column="date"/>
        <result property="intervalids" column="intervalids"/>
        <result property="status" column="status"/>
        <result property="uid" column="uid"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.BxwxAppointmentEntity">
		select * from t_bxwx_appointment where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.BxwxAppointmentEntity">
		select a.* from t_bxwx_appointment a
		<where>
			<if test="date != null">a.date = #{date}</if>
			<if test="status != null">AND a.`status` = #{status}</if>
			<if test="oid != null">AND a.`orderid` = #{oid}</if>
			<if test="uid != null">AND a.`uid` = #{uid}</if>
			<if test="ids != null">
				<foreach item="id" collection="ids">
					and FIND_IN_SET(#{id},intervalids)
				</foreach>
			</if>
		</where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_bxwx_appointment 
	</select>
	 
	 <select id="findAvailableTime" resultType="com.lcworld.vo.BxwxAppointmentVo" parameterType="java.util.Map">
		SELECT
			uid,
			intervalids,
			u.realname realname,
			u.mobile mobile
		FROM
			t_bxwx_appointment a
		LEFT JOIN t_user u ON u.id = a.uid
		WHERE
			date = #{date}
		and a.`status` = 1
	</select>
	 
	 <insert id="saveBatch" parameterType="com.lcworld.entity.BxwxAppointmentEntity">
		insert into t_bxwx_appointment
		(
			`orderid`, 
			`date`, 
			`intervalids`, 
			`status`, 
			`uid`
		)
		values
		 (
		 <foreach item="item" collection="list" separator=",">
			#{item.orderid},
			#{item.date}, 
			#{item.intervalids}, 
			#{item.status}, 
			#{item.uid}
		</foreach>
		 )
	 </insert>

	<update id="clearAppointment" parameterType="Integer">
		update t_bxwx_appointment
		<set>
			<if test="status != null">`status` = 2</if>
		</set>
		where `orderid` = #{id}
	</update>


	<insert id="save" parameterType="com.lcworld.entity.BxwxAppointmentEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_bxwx_appointment
		(
			`orderid`, 
			`date`, 
			`intervalids`, 
			`status`, 
			`uid`
		)
		values
		(
			#{orderid}, 
			#{date}, 
			#{intervalids}, 
			#{status}, 
			#{uid}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.BxwxAppointmentEntity">
		update t_bxwx_appointment 
		<set>
			<if test="orderid != null">`orderid` = #{orderid}, </if>
			<if test="date != null">`date` = #{date}, </if>
			<if test="intervalids != null">`intervalids` = #{intervalids}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="uid != null">`uid` = #{uid}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_bxwx_appointment where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_bxwx_appointment where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>