<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.TBxwxMenderItemDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.TBxwxMenderItemEntity" id="tBxwxMenderItemMap">
        <result property="id" column="id"/>
        <result property="menderid" column="menderid"/>
        <result property="itemid" column="itemid"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.TBxwxMenderItemEntity">
		select * from t_bxwx_mender_item where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.TBxwxMenderItemEntity">
		select * from t_bxwx_mender_item
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
	<select id="querymenderitemlist" resultType="map">
        select a.*,b.`name` mendername from t_bxwx_mender_item a 
        INNER JOIN t_bxwx_item b on a.itemid= b.id 
        order by id desc
       
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>
	
 	<select id="querymenderitemTotal" resultType="int">
		 select count(*) from t_bxwx_mender_item a 
        INNER JOIN t_bxwx_item b on a.itemid= b.id 
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_bxwx_mender_item 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.TBxwxMenderItemEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_bxwx_mender_item
		(
			`menderid`, 
			`itemid`
		)
		values
		(
			#{menderid}, 
			#{itemid}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.TBxwxMenderItemEntity">
		update t_bxwx_mender_item 
		<set>
			<if test="menderid != null">`menderid` = #{menderid}, </if>
			<if test="itemid != null">`itemid` = #{itemid}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_bxwx_mender_item where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_bxwx_mender_item where  id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	<delete id="deleteByParams" >
        delete from t_bxwx_mender_item 
        where menderid=#{menderid} 
        and  itemid in 
        <foreach item="id" collection="itemids" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
    <insert id="savebench" parameterType="java.util.List" >
        insert into t_bxwx_mender_item
        (
            `menderid`, 
            `itemid`
        )
        values
        <foreach collection="list" item="item" index="index"
            separator=",">
            (#{item.menderid},#{item.itemid})
        </foreach>
    </insert>
    
    <select id="queryUserItemList" resultType="com.lcworld.dto.BxwxMenderItemDTO">
        select itemid id from t_bxwx_mender_item where 1=1 
        <if test="menderid != null and menderid != ''">
            and menderid = #{menderid}
        </if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>
    
    

</mapper>