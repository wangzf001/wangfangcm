<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.TBxwxMenderDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.TBxwxMenderEntity" id="tBxwxMenderMap">
        <result property="id" column="id"/>
        <result property="realname" column="realname"/>
        <result property="departid" column="departid"/>
        <result property="valid" column="valid"/>
        <result property="mobile" column="mobile"/>
        <result property="loginid" column="loginid"/>
        <result property="score" column="score"/>
        <result property="count" column="count"/>
        <result property="photo" column="photo"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="createtime" column="createtime"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.TBxwxMenderEntity">
		select * from t_bxwx_mender where id = #{value}
	</select>
	<select id="queryByCondition" resultType="com.lcworld.entity.TBxwxMenderEntity" parameterType="java.util.Map">
		select * from t_bxwx_mender  where 1=1 
		<if test="id != null">and id = #{id}</if>
		<if test="mobile != null">and username = #{mobile}</if>
	</select>

	<select id="queryList" resultType="com.lcworld.entity.TBxwxMenderEntity">
		SELECT
			tb.*,if(t.`name` is null,'',CONCAT('(',t.`name`,')')) shanchanglingyu
		FROM
			t_bxwx_mender tb
		LEFT JOIN (
			SELECT
				menderid,
				GROUP_CONCAT(tb.`name`) `name`
			FROM
				`t_bxwx_mender_item` t
			JOIN t_bxwx_item tb ON t.itemid = tb.id
			GROUP BY
				menderid
		) t ON tb.id = t.menderid
		WHERE
			1 = 1
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by tb.${sidx} ${order}
            </when>
			<otherwise>
                order by tb.id desc
			</otherwise>
        </choose>
        
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	

	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_bxwx_mender 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.TBxwxMenderEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_bxwx_mender
		(
			`realname`, 
			`departid`, 
			`valid`, 
			`mobile`, 
			`loginid`, 
			`score`, 
			`count`, 
			`photo`,
			`username`,
			`password`,
			`createtime`
		)
		values
		(
			#{realname}, 
			#{departid}, 
			#{valid}, 
			#{mobile}, 
			#{loginid}, 
			#{score}, 
			#{count}, 
			#{photo},
			#{username},
			#{password},
			#{createtime}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.TBxwxMenderEntity">
		update t_bxwx_mender 
		<set>
			<if test="realname != null">`realname` = #{realname}, </if>
			<if test="departid != null">`departid` = #{departid}, </if>
			<if test="valid != null">`valid` = #{valid}, </if>
			<if test="mobile != null">`mobile` = #{mobile}, </if>
			<if test="loginid != null">`loginid` = #{loginid}, </if>
			<if test="score != null">`score` = #{score}, </if>
			<if test="count != null">`count` = #{count}, </if>
			<if test="photo != null">`photo` = #{photo},</if>
			<if test="username != null">`username` = #{username},</if>
			<if test="password != null">`password` = #{password},</if>
			<if test="createtime != null">`createtime` = #{createtime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_bxwx_mender where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_bxwx_mender where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	
    <select id="queryMenderlist" parameterType="map" resultMap="tBxwxMenderMap">
	   select * from t_bxwx_mender where id in (
		   SELECT DISTINCT
			    a.id
			FROM
			    t_bxwx_mender a
			INNER JOIN t_bxwx_mender_item b ON a.id = b.menderid
			WHERE
			    1 = 1
			<if test="itemid != null and itemid != 0">
				AND b.itemid =#{itemid}
			</if>    
			<if test="offset != null and limit != null">
	            limit #{offset}, #{limit}
	        </if>
	   
	   )
		
    </select>

	<select id="countByMobileAndServiceTypeAndId" resultType="int">
		SELECT
			count(t.id)
		FROM
			t_bxwx_mender AS t
		WHERE
			t.mobile = #{mobile}
		AND t.id != #{id}
	</select>	

</mapper>