<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.UserWalleorderDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.UserWalleorderEntity" id="userWalleorderMap">
        <result property="id" column="id"/>
        <result property="uid" column="uid"/>
        <result property="money" column="money"/>
        <result property="createtime" column="createtime"/>
        <result property="paytype" column="paytype"/>
        <result property="status" column="status"/>
        <result property="ordercode" column="ordercode"/>
        <result property="ordertype" column="ordertype"/>
        <result property="usetype" column="usetype"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.UserWalleorderEntity">
		select * from t_user_wallet_order where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.UserWalleorderEntity">
		select * from t_user_wallet_order o
		<where>
			<if test="uid!=null">o.uid = #{uid}</if>
			<if test="payordercode!=null and payordercode.trim() != ''"> and o.ordercode = #{payordercode}</if>
		</where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by o.createtime desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_user_wallet_order o
		<where>
			<if test="uid!=null">o.uid = #{uid}</if>
		</where>
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.UserWalleorderEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_user_wallet_order
		(
			`uid`, 
			`money`, 
			`createtime`, 
			`paytype`, 
			`status`, 
			`ordercode`,
			`ordertype`,
			`usetype`
		)
		values
		(
			#{uid}, 
			#{money}, 
			#{createtime}, 
			#{paytype}, 
			#{status}, 
			#{ordercode},
			#{ordertype},
			#{usetype}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.UserWalleorderEntity">
		update t_user_wallet_order 
		<set>
			<if test="uid != null">`uid` = #{uid}, </if>
			<if test="money != null">`money` = #{money}, </if>
			<if test="createtime != null">`createtime` = #{createtime}, </if>
			<if test="paytype != null">`paytype` = #{paytype}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="ordercode != null">`ordercode` = #{ordercode},</if>
			<if test="ordertype != null">`ordertype` = #{ordertype},</if>
			<if test="usetype != null">`usetype` = #{usetype}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_user_wallet_order where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_user_wallet_order where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>