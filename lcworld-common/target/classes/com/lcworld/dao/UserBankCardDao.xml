<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.UserBankCardDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.UserBankCardEntity" id="userBankCardMap">
        <result property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="banktype" column="banktype"/>
        <result property="cardnum" column="cardnum"/>
        <result property="mobile" column="mobile"/>
        <result property="uid" column="uid"/>
        <result property="createtime" column="createtime"/>
        <result property="isdelete" column="isdelete"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.UserBankCardEntity">
		select * from t_user_bank_card where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.UserBankCardEntity">
		select * from t_user_bank_card
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_user_bank_card 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.UserBankCardEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_user_bank_card
		(
			`username`, 
			`banktype`, 
			`cardnum`, 
			`mobile`, 
			`uid`, 
			`createtime`, 
			`isdelete`
		)
		values
		(
			#{username}, 
			#{banktype}, 
			#{cardnum}, 
			#{mobile}, 
			#{uid}, 
			#{createtime}, 
			#{isdelete}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.UserBankCardEntity">
		update t_user_bank_card 
		<set>
			<if test="username != null">`username` = #{username}, </if>
			<if test="banktype != null">`banktype` = #{banktype}, </if>
			<if test="cardnum != null">`cardnum` = #{cardnum}, </if>
			<if test="mobile != null">`mobile` = #{mobile}, </if>
			<if test="uid != null">`uid` = #{uid}, </if>
			<if test="createtime != null">`createtime` = #{createtime}, </if>
			<if test="isdelete != null">`isdelete` = #{isdelete}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_user_bank_card where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_user_bank_card where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>