<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.FwOrderCancelReasonDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.FwOrderCancelReasonEntity" id="fwOrderCancelReasonMap">
        <result property="autoId" column="auto_id"/>
        <result property="content" column="content"/>
        <result property="servicetypeid" column="servicetypeid"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.FwOrderCancelReasonEntity">
		select * from t_fw_order_cancel_reason where auto_id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.FwOrderCancelReasonEntity">
		select * from t_fw_order_cancel_reason
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by auto_id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_fw_order_cancel_reason 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.FwOrderCancelReasonEntity" useGeneratedKeys="true" keyProperty="autoId">
		insert into t_fw_order_cancel_reason
		(
			`content`, 
			`servicetypeid`
		)
		values
		(
			#{content}, 
			#{servicetypeid}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.FwOrderCancelReasonEntity">
		update t_fw_order_cancel_reason 
		<set>
			<if test="content != null">`content` = #{content}, </if>
			<if test="servicetypeid != null">`servicetypeid` = #{servicetypeid}</if>
		</set>
		where auto_id = #{autoId}
	</update>
	
	<delete id="delete">
		delete from t_fw_order_cancel_reason where auto_id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_fw_order_cancel_reason where auto_id in 
		<foreach item="autoId" collection="array" open="(" separator="," close=")">
			#{autoId}
		</foreach>
	</delete>
	
	<select id="getCancelOrderReason" resultType="map">
		SELECT
			a.content
		FROM
			t_fw_order_cancel_reason AS a
		WHERE
			a.servicetypeid = #{servicetypeid}
	</select>

</mapper>