<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.BuildingDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.BuildingEntity" id="buildingMap">
        <result property="id" column="id"/>
        <result property="buildName" column="build_name"/>
        <result property="buildType" column="build_type"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.BuildingEntity">
		select * from t_building where id = #{value}
	</select>
	<select id="queryObjectByName" resultType="com.lcworld.entity.BuildingEntity">
		select * from t_building where locate(#{value},build_name)>0
	</select>

	<select id="queryList" resultType="com.lcworld.entity.BuildingEntity">
		SELECT b.*,bt.type_name FROM t_building b LEFT JOIN t_building_type bt ON bt.type_id = b.build_type
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by b.id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(b.id) from t_building b LEFT JOIN t_building_type bt ON bt.type_id = b.build_type
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.BuildingEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_building
		(
			`build_name`, 
			`build_type`
		)
		values
		(
			#{buildName}, 
			#{buildType}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.BuildingEntity">
		update t_building 
		<set>
			<if test="buildName != null">`build_name` = #{buildName}, </if>
			<if test="buildType != null">`build_type` = #{buildType}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_building where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_building where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>