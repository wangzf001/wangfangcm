<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.RoomDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.RoomEntity" id="roomMap">
        <result property="id" column="id"/>
        <result property="code" column="code"/>
        <result property="purchaseid" column="purchaseid"/>
        <result property="buildnum" column="buildnum"/>
        <result property="dspurchaseid" column="dspurchaseid"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.RoomEntity">
		select * from t_room where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.RoomEntity">
		select * from t_room
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_room 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.RoomEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_room
		(
			`code`, 
			`purchaseid`,
			`dspurchaseid`,
			`buildnum`
			
			
		)
		values
		(
			#{code}, 
			#{purchaseid},
			#{dspurchaseid},
			#{buildnum}
			
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.RoomEntity">
		update t_room 
		<set>
			<if test="code != null">`code` = #{code}, </if>
			<if test="purchaseid != null">`purchaseid` = #{purchaseid},</if>
			<if test="dspurchaseid != null">`dspurchaseid` = #{dspurchaseid},</if>
			<if test="buildnum != null">`buildnum` = #{buildnum}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_room where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_room where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>