<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.UserDepositDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.UserDepositEntity" id="userDepositMap">
        <result property="id" column="id"/>
        <result property="deposit" column="deposit"/>
        <result property="uid" column="uid"/>
        <result property="type" column="type"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.UserDepositEntity">
		select * from t_user_deposit where id = #{value}
	</select>
	<select id="queryByCondition" parameterType="java.util.Map" resultType="com.lcworld.entity.UserDepositEntity">
		select * from t_user_deposit d
		<where>
			<if test="uid!=null">and d.uid = #{uid}</if>
			<if test="type!=null">and d.type = #{type}</if>
		</where>
	</select>

	<select id="queryList" resultType="com.lcworld.entity.UserDepositEntity">
		select * from t_user_deposit
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_user_deposit 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.UserDepositEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_user_deposit
		(
			`deposit`, 
			`uid`, 
			`type`
		)
		values
		(
			#{deposit}, 
			#{uid}, 
			#{type}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.UserDepositEntity">
		update t_user_deposit 
		<set>
			<if test="deposit != null">`deposit` = #{deposit}, </if>
			<if test="uid != null">`uid` = #{uid}, </if>
			<if test="type != null">`type` = #{type}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_user_deposit where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_user_deposit where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>