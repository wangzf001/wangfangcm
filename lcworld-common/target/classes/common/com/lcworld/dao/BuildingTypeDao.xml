<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.BuildingTypeDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.BuildingTypeEntity" id="buildingTypeMap">
        <result property="typeId" column="type_id"/>
        <result property="typeName" column="type_name"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.BuildingTypeEntity">
		select * from t_building_type where type_id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.BuildingTypeEntity">
		select * from t_building_type
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by type_id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_building_type 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.BuildingTypeEntity" useGeneratedKeys="true" keyProperty="typeId">
		insert into t_building_type
		(
			`type_name`
		)
		values
		(
			#{typeName}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.BuildingTypeEntity">
		update t_building_type 
		<set>
			<if test="typeName != null">`type_name` = #{typeName}</if>
		</set>
		where type_id = #{typeId}
	</update>
	
	<delete id="delete">
		delete from t_building_type where type_id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_building_type where type_id in 
		<foreach item="typeId" collection="array" open="(" separator="," close=")">
			#{typeId}
		</foreach>
	</delete>

</mapper>