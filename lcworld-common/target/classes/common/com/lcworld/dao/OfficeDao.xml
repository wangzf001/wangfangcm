<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.OfficeDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.OfficeEntity" id="officeMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="departid" column="departid"/>
        <result property="bgypright" column="bgypright"/>
        <result property="uid" column="uid"/>
    </resultMap>

    <select id="queryObject" resultType="com.lcworld.entity.OfficeEntity">
        select * from t_office where id = #{value}
    </select>

    <select id="queryList" resultType="com.lcworld.entity.OfficeEntity">
        select a.*,b.name departname,c.realname  from t_office a 
        inner join 
        t_depart b on a.departid = b.id
        left join t_user c on c.id = a.uid 
        where 1=1
        <if test="departid != null and departid != ''">
          and a.departid = #{departid}
        </if>
        <if test="officeid != null and officeid != ''">
          and a.id = #{officeid}
        </if>
        order by a.id
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>
    
    <select id="queryTotal" resultType="int">
        select count(*) from t_office where 1=1
          <if test="departid != null and departid != ''">
          and departid = #{departid}
          
        </if>
        <if test="officeid != null and officeid != ''">
          and id = #{officeid}
        </if>
    </select>
     
    <insert id="save" parameterType="com.lcworld.entity.OfficeEntity" useGeneratedKeys="true" keyProperty="id">
        insert into t_office
        (
            `name`, 
            `departid`, 
            `bgypright`,
            `uid`
        )
        values
        (
            #{name}, 
            #{departid}, 
            #{bgypright},
            #{uid}
        )
    </insert>
     
    <update id="update" parameterType="com.lcworld.entity.OfficeEntity">
        update t_office 
        <set>
            <if test="name != null">`name` = #{name}, </if>
            <if test="departid != null">`departid` = #{departid}, </if>
            <if test="bgypright != null">`bgypright` = #{bgypright},</if>
            <if test="uid != null">`uid` = #{uid}</if>
        </set>
        where id = #{id}
    </update>
    
    <delete id="delete">
        delete from t_office where id = #{value}
    </delete>
    
    <delete id="deleteBatch">
        delete from t_office where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>