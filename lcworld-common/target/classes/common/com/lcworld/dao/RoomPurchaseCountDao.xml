<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.RoomPurchaseCountDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.RoomPurchaseCountEntity" id="roomPurchaseCountMap">
        <result property="id" column="id"/>
        <result property="roomid" column="roomid"/>
        <result property="purchaseid" column="purchaseid"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.RoomPurchaseCountEntity">
		select * from t_room_purchase_count where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.RoomPurchaseCountEntity">
		select * from t_room_purchase_count
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_room_purchase_count 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.RoomPurchaseCountEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_room_purchase_count
		(
			`roomid`, 
			`purchaseid`
		)
		values
		(
			#{roomid}, 
			#{purchaseid}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.RoomPurchaseCountEntity">
		update t_room_purchase_count 
		<set>
			<if test="roomid != null">`roomid` = #{roomid}, </if>
			<if test="purchaseid != null">`purchaseid` = #{purchaseid}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_room_purchase_count where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_room_purchase_count where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>