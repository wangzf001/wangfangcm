<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.OrderViewDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.OrderViewEntity" id="orderViewMap">
        <result property="id" column="id"/>
        <result property="oid" column="oid"/>
        <result property="uid" column="uid"/>
        <result property="paystatus" column="paystatus"/>
        <result property="username" column="username"/>
        <result property="remark" column="remark"/>
        <result property="address" column="address"/>
        <result property="createtime" column="createtime"/>
        <result property="ordercode" column="ordercode"/>
        <result property="type" column="type"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.OrderViewEntity">
		select * from t_order_view where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.OrderViewEntity">
		select * from t_order_view where uid = #{uid} and paystatus != 3 and paystatus != 5 
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by createtime desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_order_view 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.OrderViewEntity">
		insert into t_order_view
		(
			`id`, 
			`oid`, 
			`uid`, 
			`paystatus`, 
			`username`, 
			`remark`, 
			`address`, 
			`createtime`, 
			`ordercode`, 
			`type`
		)
		values
		(
			#{id}, 
			#{oid}, 
			#{uid}, 
			#{paystatus}, 
			#{username}, 
			#{remark}, 
			#{address}, 
			#{createtime}, 
			#{ordercode}, 
			#{type}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.OrderViewEntity">
		update t_order_view 
		<set>
			<if test="oid != null">`oid` = #{oid}, </if>
			<if test="uid != null">`uid` = #{uid}, </if>
			<if test="paystatus != null">`paystatus` = #{paystatus}, </if>
			<if test="username != null">`username` = #{username}, </if>
			<if test="remark != null">`remark` = #{remark}, </if>
			<if test="address != null">`address` = #{address}, </if>
			<if test="createtime != null">`createtime` = #{createtime}, </if>
			<if test="ordercode != null">`ordercode` = #{ordercode}, </if>
			<if test="type != null">`type` = #{type}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_order_view where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_order_view where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>