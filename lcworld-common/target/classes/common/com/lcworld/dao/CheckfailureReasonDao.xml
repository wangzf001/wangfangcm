<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.CheckfailureReasonDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.CheckfailureReasonEntity" id="checkfailureReasonMap">
        <result property="id" column="id"/>
        <result property="servicecode" column="servicecode"/>
        <result property="reason" column="reason"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.CheckfailureReasonEntity">
		select * from t_checkfailure_reason where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.CheckfailureReasonEntity">
		select * from t_checkfailure_reason where 1=1 
		<if test="servicecode != null and servicecode != ''">
	        and servicecode = #{servicecode}	
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_checkfailure_reason 
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.CheckfailureReasonEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_checkfailure_reason
		(
			`servicecode`, 
			`reason`
		)
		values
		(
			#{servicecode}, 
			#{reason}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.CheckfailureReasonEntity">
		update t_checkfailure_reason 
		<set>
			<if test="servicecode != null">`servicecode` = #{servicecode}, </if>
			<if test="reason != null">`reason` = #{reason}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_checkfailure_reason where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_checkfailure_reason where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>