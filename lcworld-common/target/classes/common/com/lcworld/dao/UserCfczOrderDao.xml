<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcworld.dao.UserCfczOrderDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lcworld.entity.UserCfczOrderEntity" id="userCfczOrderMap">
        <result property="id" column="id"/>
        <result property="uid" column="uid"/>
        <result property="money" column="money"/>
        <result property="createtime" column="createtime"/>
        <result property="paytype" column="paytype"/>
        <result property="status" column="status"/>
        <result property="ordercode" column="ordercode"/>
        <result property="cardNum" column="card_num"/>
    </resultMap>

	<select id="queryObject" resultType="com.lcworld.entity.UserCfczOrderEntity">
		select * from t_user_cfcz_order where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcworld.entity.UserCfczOrderEntity">
		select * from t_user_cfcz_order o
		<where>
			<if test="isUnderway!=null and isUnderway==1">and o.status = 2</if>
			<if test="isUnderway!=null and isUnderway==0"> and o.status != 2</if>
			<if test="status!=null">and o.status = #{status}</if>
			<if test="uid!=null">and o.uid = #{uid}</if>
			<if test="payordercode !=null and payordercode.trim()!= ''">and o.ordercode = #{payordercode}</if>
		</where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_user_cfcz_order o
		<where>
			<if test="status!=null">o.status = #{status}</if>
			<if test="uid!=null">o.uid = #{uid}</if>
		</where>
	</select>
	 
	<insert id="save" parameterType="com.lcworld.entity.UserCfczOrderEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_user_cfcz_order
		(
			`uid`, 
			`money`, 
			`createtime`, 
			`paytype`, 
			`status`, 
			`ordercode`,
			`card_num`
		)
		values
		(
			#{uid}, 
			#{money}, 
			#{createtime}, 
			#{paytype}, 
			#{status}, 
			#{ordercode},
			#{cardNum}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcworld.entity.UserCfczOrderEntity">
		update t_user_cfcz_order 
		<set>
			<if test="uid != null">`uid` = #{uid}, </if>
			<if test="money != null">`money` = #{money}, </if>
			<if test="createtime != null">`createtime` = #{createtime}, </if>
			<if test="paytype != null">`paytype` = #{paytype}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="ordercode != null">`ordercode` = #{ordercode}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_user_cfcz_order where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_user_cfcz_order where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>